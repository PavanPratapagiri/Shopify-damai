document.addEventListener('DOMContentLoaded', function() {
  const loadingSvg = document.querySelector('.loading__spinner');
  const btn = document.querySelector('.remove-all');
  
  const currency = "{{ shop.currency }}";
  const locale = "{{ shop.locale | default: "" }}" || navigator.language;

  let moneyFmt = new Intl.NumberFormat(locale, {
    style: "currency",
    currency: currency
  });

  function formatPrice(cents) {
    return moneyFmt.format(cents / 100);
  }
  
  // — helper to change a line item —
  async function updateCart(quantity, lineIndex) {
    return await fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ line: lineIndex, quantity: quantity })
    })
  }

  async function addCart(variantId, quantity) {
    return await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: variantId, quantity: quantity })
    }).then(res => res.json());
  }

  // — helper to refresh the summary at bottom —
  function refreshSummary(cart) {
    const count = document.querySelector('.action-total strong');
    const subtotal = document.querySelector('.summary .price');
    
    btn.disabled = cart.item_count === 0;
    count.textContent = cart.item_count;
    subtotal.innerText = formatPrice(cart.total_price);
  }

  // — wire up each variant row —
  document.querySelectorAll('tr[data-variant-id]').forEach(row => {
    const vid = row.dataset.variantId;
    const priceCents = parseInt(row.dataset.price, 10);
    const qtyInput = row.querySelector('.qty');
    const quantityInputEl = row.querySelector('ma-quantity-input');
    const totalCell = row.querySelector('.total');
    const decBtn = row.querySelector(".MA-quantity__button[name='minus']");
    const incBtn = row.querySelector(".MA-quantity__button[name='plus']");
    const remBtn = row.querySelector('.remove-variant');
    const quickSelectBtns = row.querySelectorAll('.quick-select-btn');
    const undoBtn = row.querySelector('.undo-action');
    
    let undoStack = [];
    let isUpdating = false;

    // Quick select buttons functionality
    quickSelectBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const selectedQty = parseInt(this.dataset.qty);
        const maxQty = parseInt(qtyInput.max, 10);
        
        // Check if quantity is available
        if (selectedQty > maxQty) {
          quantityInputEl.showError(`Only ${maxQty} available`);
          return;
        }
        
        // Update active state
        quickSelectBtns.forEach(b => b.classList.remove('active'));
        
        if (parseInt(qtyInput.value) === selectedQty) {
          // If clicking the same quantity, set to 0
          qtyInput.value = 0;
        } else {
          // Set to selected quantity
          qtyInput.value = selectedQty;
          this.classList.add('active');
        }
        
        qtyInput.dispatchEvent(new Event('change', { bubbles: true }));
      });
    });

    // Update quick select active state based on current value
    function updateQuickSelectState() {
      const currentQty = parseInt(qtyInput.value);
      quickSelectBtns.forEach(btn => {
        if (parseInt(btn.dataset.qty) === currentQty) {
          btn.classList.add('active');
        } else {
          btn.classList.remove('active');
        }
      });
    }

    // Undo functionality
    if (undoBtn) {
      undoBtn.addEventListener('click', function() {
        if (undoStack.length > 0) {
          const previousQty = undoStack.pop();
          qtyInput.value = previousQty;
          qtyInput.dispatchEvent(new Event('change', { bubbles: true }));
          
          if (undoStack.length === 0) {
            undoBtn.classList.remove('show');
          }
        }
      });
    }

    // Initialize the quantity display and button states
    async function initializeRow() {
      try {
        const cart = await fetch('/cart.js').then(r => r.json());
        const item = cart.items.find(i => i.variant_id == vid);
        const qty = item ? item.quantity : 0;
        
        qtyInput.value = qty;
        totalCell.textContent = formatPrice(item ? item.line_price : 0);
        decBtn.disabled = qty < 1;
        incBtn.disabled = qty >= parseInt(qtyInput.max, 10);
        
        updateQuickSelectState();
        
        if (qty === 0) {
          remBtn.classList.add('hidden');
        } else {
          remBtn.classList.remove('hidden');
        }
        
        // Update summary on init
        refreshSummary(cart);
      } catch (error) {
        console.error('Failed to initialize row:', error);
      }
    }

    async function handleCartUpdate(newQty) {
      if (isUpdating) return;
      
      isUpdating = true;
      quantityInputEl.classList.add('updating');
      loadingSvg.classList.remove('hidden');
      btn.classList.add('hidden');
      
      // Save to undo stack
      const currentQty = parseInt(qtyInput.value);
      if (undoStack.length === 0 || undoStack[undoStack.length - 1] !== currentQty) {
        undoStack.push(currentQty);
        if (undoStack.length > 1 && undoBtn) {
          undoBtn.classList.add('show');
          setTimeout(() => undoBtn.classList.remove('show'), 5000);
        }
      }
      
      try {
        const cart = await fetch('/cart.js').then(r => r.json());
        const item = cart.items.find(i => i.variant_id == vid);
        const lineIndex = cart.items.findIndex(i => i.variant_id == vid) + 1;
        
        if (item && newQty > 0) {
          // Update existing item
          await updateCart(newQty, lineIndex);
        } else if (!item && newQty > 0) {
          // Add new item
          await addCart(vid, newQty);
        } else if (item && newQty === 0) {
          // Remove item
          await updateCart(0, lineIndex);
        }
        
        // Refresh the display
        await handleResponse();
        quantityInputEl.showSuccess();
      } catch (error) {
        console.error('Cart update failed:', error);
        quantityInputEl.showError('Update failed. Please try again.');
        // Revert to previous value on error
        if (undoStack.length > 0) {
          qtyInput.value = undoStack[undoStack.length - 1];
        }
        await initializeRow();
      } finally {
        isUpdating = false;
        quantityInputEl.classList.remove('updating');
        loadingSvg.classList.add('hidden');
        btn.classList.remove('hidden');
      }
    }

    async function handleResponse() {
      try {
        const cart = await fetch('/cart.js').then(r => r.json());
        const item = cart.items.find(i => i.variant_id == vid);
        const qty = item ? item.quantity : 0;
        
        qtyInput.value = qty;
        totalCell.textContent = formatPrice(item ? item.line_price : 0);
        decBtn.disabled = qty < 1;
        incBtn.disabled = qty >= parseInt(qtyInput.max, 10);
        
        updateQuickSelectState();
        
        if (qty === 0) {
          remBtn.classList.add('hidden');
        } else {
          remBtn.classList.remove('hidden');
        }
        
        refreshSummary(cart);
      } catch (error) {
        console.error('Failed to handle response:', error);
      }
    }

    // Initialize on page load
    initializeRow();

    // Listen for quantity changes from the custom element
    document.addEventListener('quantityChanged', function(event) {
      if (event.detail.variantId == vid) {
        handleCartUpdate(event.detail.quantity);
      }
    });

    remBtn.addEventListener('click', async () => {
      await handleCartUpdate(0);
    });
  });

  // — "Remove all" button —
  document.querySelector('.remove-all').addEventListener('click', function() {
    loadingSvg.classList.remove('hidden');
    btn.classList.add('hidden');
    fetch('/cart/clear.js', { method: 'POST' })
      .then(res => res.json())
      .then(cart => {
        document.querySelectorAll('tr[data-variant-id]').forEach(row => {
          const qtyInput = row.querySelector('.qty');
          const totalCell = row.querySelector('.total');
          const decBtn = row.querySelector(".MA-quantity__button[name='minus']");
          const remBtn = row.querySelector('.remove-variant');
          const quickSelectBtns = row.querySelectorAll('.quick-select-btn');
          
          qtyInput.value = 0;
          totalCell.textContent = formatPrice(0);
          decBtn.disabled = true;
          remBtn.classList.add('hidden');
          quickSelectBtns.forEach(btn => btn.classList.remove('active'));
        });
        loadingSvg.classList.add('hidden');
        btn.classList.remove('hidden');
        refreshSummary(cart);
      });
  });

  // Keyboard shortcuts
  document.addEventListener('keydown', function(event) {
    // Ctrl/Cmd + A to select all quantities
    if ((event.ctrlKey || event.metaKey) && event.key === 'a' && event.target.tagName !== 'INPUT') {
      event.preventDefault();
      const inputs = document.querySelectorAll('.MA-quantity__input');
      inputs.forEach(input => {
        if (input.value === '0') {
          input.value = '1';
          input.dispatchEvent(new Event('change', { bubbles: true }));
        }
      });
    }
  });
});
