<script>
  class QuantityInput extends HTMLElement {
    constructor() {
      super();
      this.input = this.querySelector('input');
      this.changeEvent = new Event('change', { bubbles: true });
      this.debounceTimer = null;
      this.previousValue = this.input.value;

      // wire up input change and button clicks
      this.input.addEventListener('change', this.onInputChange.bind(this));
      this.input.addEventListener('keydown', this.onKeyDown.bind(this));
      this.input.addEventListener('input', this.onInputTyping.bind(this));
      
      this.querySelectorAll('button').forEach(button =>
        button.addEventListener('click', this.onButtonClick.bind(this))
      );
    }

    onKeyDown(event) {
      // Arrow up/down for increment/decrement
      if (event.key === 'ArrowUp') {
        event.preventDefault();
        this.querySelector("button[name='plus']").click();
      } else if (event.key === 'ArrowDown') {
        event.preventDefault();
        this.querySelector("button[name='minus']").click();
      }
    }

    onInputTyping(event) {
      // Add visual feedback
      this.input.classList.add('changed');
      setTimeout(() => this.input.classList.remove('changed'), 300);
      
      // Clear previous timer
      if (this.debounceTimer) {
        clearTimeout(this.debounceTimer);
      }
      
      // Debounce the update
      this.debounceTimer = setTimeout(() => {
        this.validateQtyRules();
      }, 500);
    }

    onInputChange() {
      // enforce min/max every time the user types a value
      this.validateQtyRules();
      // Trigger cart update when user manually changes input
      this.updateCartFromInput();
    }

    updateCartFromInput() {
      const row = this.closest('tr[data-variant-id]');
      const vid = row.dataset.variantId;
      const newQty = parseInt(this.input.value) || 0;
      
      // Store previous value for undo
      this.previousValue = this.input.value;
      
      // Find and trigger the update function for this variant
      const updateEvent = new CustomEvent('quantityChanged', {
        detail: { variantId: vid, quantity: newQty }
      });
      document.dispatchEvent(updateEvent);
    }

    onButtonClick(event) {
      event.preventDefault();
      const prev = this.input.valueAsNumber || 0;

      if (event.target.name === 'plus') {
        // if zero and min is higher, jump to min
        if (prev === 0 && this.input.min) {
          this.input.value = this.input.min;
        } else {
          this.input.stepUp();
        }
      } else {
        this.input.stepDown();
      }

      // fire change if value really changed
      const now = this.input.valueAsNumber || 0;
      if (now !== prev) {
        this.input.dispatchEvent(this.changeEvent);
      }

      // re-validate your +/- button states
      this.validateQtyRules();
    }

    validateQtyRules() {
      const val = this.input.valueAsNumber || 0;
      const max = parseInt(this.input.max, 10);
      const min = parseInt(this.input.min, 10);

      // Check if value exceeds max
      if (max && val > max) {
        this.showError(`Maximum quantity is ${max}`);
        this.input.value = max;
      }

      // disable "–" if at or below min
      if (this.input.min) {
        const btnMinus = this.querySelector("button[name='minus']");
        btnMinus.disabled = val <= min;
      }

      // disable "+" if at or above max
      if (this.input.max) {
        const btnPlus = this.querySelector("button[name='plus']");
        btnPlus.disabled = val >= max;
      }
    }

    showError(message) {
      this.classList.add('error');
      const errorEl = this.closest('.quantity-wrapper')?.querySelector('.quantity-error');
      if (errorEl) {
        errorEl.textContent = message;
        errorEl.classList.remove('hidden');
        setTimeout(() => {
          errorEl.classList.add('hidden');
          this.classList.remove('error');
        }, 3000);
