    const subtotal = document.querySelector('.summary .price');
    
    btn.disabled = cart.item_count === 0;
    if (count) count.textContent = cart.item_count;
    
    // Calculate total based on discounted prices (sale prices)
    let discountedTotal = 0;
    document.querySelectorAll('tr[data-variant-id]').forEach(row => {
      const price = parseInt(row.dataset.price, 10);
      const qtyInput = row.querySelector('.qty');
      const qty = parseInt(qtyInput.value) || 0;
      discountedTotal += price * qty;
    });
    
    if (subtotal) subtotal.textContent = formatPrice(discountedTotal);
  }

  // — wire up each variant row —
  const processedVariants = new Set();
  const updateQueue = new Map(); // Track pending updates per variant
  
  document.querySelectorAll('tr[data-variant-id]').forEach(row => {
    const vid = row.dataset.variantId;
    const priceCents = parseInt(row.dataset.price, 10);
    const msrpPriceCents = parseInt(row.dataset.msrpPrice, 10);
    const qtyInput = row.querySelector('.qty');
    const totalCell = row.querySelector('.total');
    const decBtn = row.querySelector(".MA-quantity__button[name='minus']");
    const incBtn = row.querySelector(".MA-quantity__button[name='plus']");
    const remBtn = row.querySelector('.remove-variant');
    const quantityElement = row.querySelector('ma-quantity-input');

    // Initialize button states based on current value
    function updateButtonStates() {
      const qty = parseInt(qtyInput.value) || 0;
      const maxQty = parseInt(qtyInput.max, 10);
      
      decBtn.disabled = qty <= 0;
      incBtn.disabled = qty >= maxQty;
      
      if (qty === 0) {
        remBtn.classList.add('hidden');
      } else {
        remBtn.classList.remove('hidden');
      }
    }
    
    // Calculate total based on discounted price (sale price)
    function calculateDiscountedTotal(quantity) {
      return priceCents * quantity;
    }

    // Initialize button states on page load (use server-rendered values)
    updateButtonStates();
    
    // Initialize the total display based on current quantity
    const initialQty = parseInt(qtyInput.value) || 0;
    if (initialQty > 0) {
      totalCell.textContent = formatPrice(calculateDiscountedTotal(initialQty));
    }
    
    // Fetch initial cart state for summary (only once)
    if (!processedVariants.size) {
      fetch('/cart.js').then(r => r.json()).then(cart => {
        refreshSummary(cart);
      });
    }

    async function handleCartUpdate(newQty) {
      // Prevent multiple simultaneous updates for same variant
      if (updateQueue.has(vid)) {
        return updateQueue.get(vid);
      }
      
      if (quantityElement) {
        quantityElement.isUpdating = true;
      }
      
      loadingSvg.classList.remove('hidden');
      btn.classList.add('hidden');
      
      const updatePromise = (async () => {
        try {
          const cart = await fetch('/cart.js').then(r => r.json());
          const item = cart.items.find(i => i.variant_id == vid);
          const lineIndex = cart.items.findIndex(i => i.variant_id == vid) + 1;
          
          let updatedCart;
          if (item && newQty > 0) {
            // Update existing item
            updatedCart = await updateCart(newQty, lineIndex);
          } else if (!item && newQty > 0) {
            // Add new item
            updatedCart = await addCart(vid, newQty);
          } else if (item && newQty === 0) {
            // Remove item
            updatedCart = await updateCart(0, lineIndex);
          }
          
          // Refresh the display with the updated cart
          await handleResponse(updatedCart);
        } catch (error) {
          console.error('Cart update failed:', error);
          // Fetch current cart state on error
          const cart = await fetch('/cart.js').then(r => r.json());
          const item = cart.items.find(i => i.variant_id == vid);
          qtyInput.value = item ? item.quantity : 0;
          totalCell.textContent = formatPrice(item ? item.line_price : 0);
          updateButtonStates();
          loadingSvg.classList.add('hidden');
          btn.classList.remove('hidden');
        } finally {
          updateQueue.delete(vid);
          if (quantityElement) {
            setTimeout(() => {
              quantityElement.isUpdating = false;
            }, 100);
          }
        }
      })();
      
      updateQueue.set(vid, updatePromise);
      return updatePromise;
    }

    async function handleResponse(cart) {
      try {
        // If cart not provided, fetch it
        if (!cart) {
          cart = await fetch('/cart.js').then(r => r.json());
        }
        
        const item = cart.items.find(i => i.variant_id == vid);
        const qty = item ? item.quantity : 0;
        
        qtyInput.value = qty;
        totalCell.textContent = formatPrice(calculateDiscountedTotal(qty));
        updateButtonStates();
        
        loadingSvg.classList.add('hidden');
        btn.classList.remove('hidden');
        refreshSummary(cart);
        
        // Dispatch cart update complete event - critical for wholesale customer reload
        setTimeout(() => {
          document.dispatchEvent(new Event('cartUpdateComplete'));
        }, 100);
        
        // Wait for wholesale pricing to recalculate before refreshing display
        {% if wcp_wholesale_customer == true %}
        // For wholesale customers, wait for WCP to recalculate prices
        setTimeout(async function() {
          // Fetch updated cart with wholesale prices applied
          const updatedCart = await fetch('/cart.js').then(r => r.json());
          const updatedItem = updatedCart.items.find(i => i.variant_id == vid);
          
          // Update display with wholesale prices
          if (updatedItem) {
            qtyInput.value = updatedItem.quantity;
            totalCell.textContent = formatPrice(calculateDiscountedTotal(updatedItem.quantity));
          }
          refreshSummary(updatedCart);
        }, 1500); // Wait for WCP calculations to complete
        {% endif %}
      } catch (error) {
        console.error('Failed to handle response:', error);
        loadingSvg.classList.add('hidden');
        btn.classList.remove('hidden');
      }
    }

    // Listen for quantity changes from the custom element - only attach once per variant
    if (!processedVariants.has(vid)) {
      processedVariants.add(vid);
      
      const handler = function(event) {
        if (event.detail.variantId == vid) {
          handleCartUpdate(event.detail.quantity);
        }
      };
      
      document.addEventListener('quantityChanged', handler);
    }

    remBtn.addEventListener('click', async () => {
      await handleCartUpdate(0);
    });
  });

  // — "Remove all" button —
  document.querySelector('.remove-all').addEventListener('click', function() {
    loadingSvg.classList.remove('hidden');
    btn.classList.add('hidden');
    fetch('/cart/clear.js', { method: 'POST' })
      .then(res => res.json())
      .then(cart => {
        document.querySelectorAll('tr[data-variant-id]').forEach(row => {
          const qtyInput = row.querySelector('.qty');
          const totalCell = row.querySelector('.total');
          const decBtn = row.querySelector(".MA-quantity__button[name='minus']");
          const remBtn = row.querySelector('.remove-variant');
          
          qtyInput.value = 0;
          totalCell.textContent = formatPrice(0);
          decBtn.disabled = true;
          remBtn.classList.add('hidden');
        });
        loadingSvg.classList.add('hidden');
        btn.classList.remove('hidden');
        refreshSummary(cart);
        
        // Dispatch cart update complete event
        document.dispatchEvent(new Event('cartUpdateComplete'));
      });
  });
});
</script>

