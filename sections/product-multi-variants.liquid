<style>
  .product-section-variants{
    margin-bottom: 50px;
  }
  /* — Variant table — */
.variant-table {
  width: 100%;
  border-collapse: collapse;
}
.variant-table th,
.variant-table td {
  padding: 12px;
  vertical-align: middle;
  font-size: 14px;
  color: #000;
  font-weight: 600;
  border-bottom: none;
}
.variant-table tr{
  border-bottom: 1px solid #e1e1e1;
}
.variant-table td.price,
.variant-table td.total{
  text-align: end;
}
.variant-table th {
  font-weight: 600;
  text-transform: uppercase;
  font-size: 11px;
  color: #000000BF;
}
.variant-table th.quantity-heading{
  text-align: center;
}
.variant-table th.price-heading,
.variant-table th.total-heading{
  text-align: end;
}
  

  .variant-table td.sku span{
    font-weight: 600;
    font-size: 14px;
  }

  .variant-table td.sku small{
    font-size: 11px;
    color: #000000BF;
    font-weight: 600;
  }

  .variant-table td.sku .price{
    display:none;
  }

  .variant-table .price-cell {
    text-align: end;
  }
  
  .variant-table .price-cell .msrp {
    font-size: 12px;
    color: #666;
    text-decoration: line-through;
    margin-bottom: 2px;
  }
  
  .variant-table .price-cell .current-price {
    font-weight: 600;
    color: #000;
  }

/* — Quantity controls — */
  ma-quantity-input{
    display: flex;
    align-items: center;
    border: 1px solid #000;
    opacity: .85;
  }
.variant-table .quantity-cell {
  display: flex;
  align-items: center;
  gap: 15px;
  padding-block: 17px; 
  justify-content: center;
}
.qty-btn {
  width: 2rem;
  height: 2rem;
  line-height: 1;
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 4px;
  font-size: 1.2rem;
  cursor: pointer;
}
.qty-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
.qty {
  min-width: 1.5rem;
  text-align: center;
  display: inline-block;
}
  
.MA-quantity__button {
    width: 30px;
    flex-shrink: 0;
    font-size: 18px;
    border: 0;
    background-color: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    padding: 0;
}
  .MA-quantity__button:disabled{
    cursor: not-allowed;
  }
  .product-section-variants .MA-quantity__input {
    color: #000;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    background-color: transparent;
    border: 0;
    width: 100%;
    flex-grow: 1;
    -webkit-appearance: none;
    appearance: none;
    margin: 0px;
    padding: 6px;
}
  
.remove-variant {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: #000;
  background-color: #787c83;
  border-radius: 2px;
  padding: 0px 5px 2px;
}
.remove-variant svg{
  width: 16px;
  height: 16px;
}
.remove-variant svg path{
  fill: #fff;
}
.remove-variant:hover {
  color: #e00;
}

/* — Actions & summary — */
.actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-block: 16px;
  gap: 30px;
}
.action-total{
  font-size: 16px;
  text-align: center;
}
.action-total strong{
  font-weight: 600;
}
.btn {
  display: inline-block;
  padding: 0.6rem 1rem;
  border-radius: 4px;
  font-size: 0.9rem;
  text-decoration: none;
  text-align: center;
  cursor: pointer;
}
.view-cart {
  background: #2d8f3f;
  color: #fff;
}
.remove-all {
  background: #fff;
  border: 1px solid #999;
  color: #333;
}
.remove-all:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
.summary {
  text-align: right;
  font-size: 0.9rem;
  color: #000;
}
.summary strong {
  font-size: 1.1rem;
}
.summary .price {
  display: block;
  margin-top: 0.25rem;
  font-size: 16px;
  color: #000;
  font-weight: 600;
}
.summary .subtotal{
  color: #000000BF;
  font-size: 16px;
  font-weight: 400;
}
/* Loading spinner */

.loading__spinner {
  width: 26px;
  display: flex;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.loading__spinner .spinner {
  animation: rotator 1.4s linear infinite;
}

.loading__spinner .path {
  stroke-dasharray: 280;
  stroke-dashoffset: 0;
  transform-origin: center;
  stroke: #000000BF;
  animation: spinner-dash 1.4s ease-in-out infinite;
}

  .action-btns{
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .action-btns-spin{
    position: relative;
  }
  

@keyframes spinner-dash {
  0% {
    stroke-dashoffset: 280;
  }
  50% {
    stroke-dashoffset: 75;
    transform: rotate(135deg);
  }
  100% {
    stroke-dashoffset: 280;
    transform: rotate(450deg);
  }
}

@keyframes rotator {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(270deg);
  }
}


  @media screen and (max-width: 768px){
    .actions{
