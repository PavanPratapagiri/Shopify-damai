}

.variant-table .quick-select-btn {
  padding: 4px 10px;
  font-size: 11px;
  background: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 3px;
  cursor: pointer;
  transition: all 0.2s;
  font-weight: 600;
  color: #333;
}

.variant-table .quick-select-btn:hover {
  background: #e0e0e0;
  border-color: #bbb;
}

.variant-table .quick-select-btn.active {
  background: #000;
  color: #fff;
  border-color: #000;
}

.variant-table .quantity-error {
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 10px;
  color: #d9534f;
  white-space: nowrap;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateX(-50%) translateY(-5px); }
  to { opacity: 1; transform: translateX(-50%) translateY(0); }
}

.variant-table .undo-action {
  position: absolute;
  top: -25px;
  right: 0;
  font-size: 11px;
  color: #0066cc;
  cursor: pointer;
  text-decoration: underline;
  display: none;
  animation: slideDown 0.3s;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-5px); }
  to { opacity: 1; transform: translateY(0); }
}

.variant-table .undo-action.show {
  display: block;
}

