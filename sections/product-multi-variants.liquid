<div class="wrapper">
  <div class="product-section-variants">
    <table class="variant-table">
      <thead>
        <tr>
          <th>SKU</th>
          <th class="quantity-heading">Quantity</th>
          <th class="stock-heading">Stock Availability</th>
          <th class="price-heading">MSRP</th>
          <th class="total-heading">Total</th>
        </tr>
      </thead>
      <tbody>
        {% for variant in product.variants %}
          {%- assign variant_qty = 0 -%}
          {%- assign variant_key = 0 -%}
          {%- assign line_price = 0 -%}
          {%- assign msrp_price = variant.compare_at_price | default: variant.price -%}
          {%- assign discounted_total = 0 -%}
          {%- assign actual_unit_price = variant.price -%}
          
          {% for item in cart.items %}
            {% if item.variant_id == variant.id %}
              {%- assign variant_qty = item.quantity -%}
              {%- assign variant_key = item.key -%}
              {%- assign line_price = item.line_price -%}
              {%- assign discounted_total = item.final_line_price -%}
              {%- assign actual_unit_price = item.final_price -%}
            {% endif %}
          {% endfor %}
          <tr
            data-variant-id="{{ variant.id }}"
            data-price="{{ actual_unit_price }}"
            data-msrp-price="{{ msrp_price }}"
            data-base-price="{{ variant.price }}"
            data-inventory="{{ variant.inventory_quantity }}"
          >
            <input type="hidden"
              data-wpd-cart-drawer-product-handle="{{ product.handle }}"                                  
data-wpd-cart-drawer-variant-id="{{ variant.id }}"                                   
data-wpd-cart-drawer-variant-price="{{ variant.price }}"                                  
data-wpd-cart-drawer-variant-compare-at-price="{{ variant.compare_at_price }}"                                  
data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
data-wpd-cart-drawer-product-id="{{ product.id }}"                                  
data-wpd-cart-drawer-line-price                                  
data-wpd-cart-drawer-item="{{ variant_key }}"                              
data-wpd-cart-drawer-quantity="{{ variant_qty }}">
            
            <td class="sku">
              {% assign variant_title = variant.title | downcase %}
              {% unless variant_title contains 'size' %}
                {% assign variant_title = 'Size ' | append: variant.title %}
              {% else %}
                {% assign variant_title = variant.title %}
              {% endunless %}
              <span>{{ variant_title }}</span><br>
              <small>{{ variant.sku }}</small><br>
              <span class="price"
                 data-wpd-cart-drawer-product-handle="{{ product.handle }}"                                  
data-wpd-cart-drawer-variant-id="{{ variant.id }}"                                   
data-wpd-cart-drawer-variant-price="{{ variant.price }}"                                  
data-wpd-cart-drawer-variant-compare-at-price="{{ variant.compare_at_price }}"                                  
data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
data-wpd-cart-drawer-product-id="{{ product.id }}"                                   
data-wpd-cart-drawer-item="{{ variant_key }}"                          
data-wpd-cart-drawer-quantity="{{ variant_qty }}">
                {% if variant.compare_at_price > variant.price %}
                  <span class="msrp">MSRP: {{ variant.compare_at_price | money }}</span><br>
                {% endif %}
                {{ variant.price | money }}
              </span>
            </td>
            <td class="quantity-cell">
              <div class="quantity-wrapper">
                <ma-quantity-input>
                  <button type="button" name="minus" class="MA-quantity__button" {% if variant_qty == 0 %}disabled{% endif %}>−</button>
                  <input
                    type="number"
                    min="0"
                    max="{{ variant.inventory_quantity }}"
                    step="1"
                    value="{{ variant_qty }}"
                    class="MA-quantity__input qty"
                    data-variant-id="{{ variant.id }}"
                  />
                  <button type="button" name="plus" class="MA-quantity__button" {% if variant.inventory_quantity <= 0 %}disabled{% endif %}>+</button>
                </ma-quantity-input>
                <button class="remove-variant" {% if variant_qty == 0 %}disabled{% endif %}>
