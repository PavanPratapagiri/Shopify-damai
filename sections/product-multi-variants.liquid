<script>
  class QuantityInput extends HTMLElement {
    constructor() {
      super();
      this.input = this.querySelector('input');
      this.changeEvent = new Event('change', { bubbles: true });
      this.isUpdating = false;
      this.inputTimeout = null;

      // wire up input change and button clicks
      this.input.addEventListener('change', this.onInputChange.bind(this));
      this.input.addEventListener('input', this.onInputDebounced.bind(this));
      this.querySelectorAll('button').forEach(button =>
        button.addEventListener('click', this.onButtonClick.bind(this))
      );
    }

    connectedCallback() {
      // Initialize button states when element is added to DOM
      this.validateQtyRules();
    }

    onInputDebounced(event) {
      // Clear existing timeout
      if (this.inputTimeout) {
        clearTimeout(this.inputTimeout);
      }
      
      // Validate immediately for UI feedback
      let value = parseInt(this.input.value) || 0;
      if (value < 0) value = 0;
      if (this.input.max && value > parseInt(this.input.max)) {
        value = parseInt(this.input.max);
      }
      this.input.value = value;
      this.validateQtyRules();
    }

    onInputChange(event) {
      // Prevent negative values and enforce integer
      let value = parseInt(this.input.value) || 0;
      if (value < 0) value = 0;
      if (this.input.max && value > parseInt(this.input.max)) {
        value = parseInt(this.input.max);
      }
      this.input.value = value;
      
      // enforce min/max every time the user types a value
      this.validateQtyRules();
      
      // Only trigger cart update on 'change' event (when user is done typing)
      if (!this.isUpdating) {
        this.updateCartFromInput();
      }
    }

    updateCartFromInput() {
      const row = this.closest('tr[data-variant-id]');
      if (!row) return;
      
      const vid = row.dataset.variantId;
      const newQty = parseInt(this.input.value) || 0;
      
      // Find and trigger the update function for this variant
      const updateEvent = new CustomEvent('quantityChanged', {
        detail: { variantId: vid, quantity: newQty },
        bubbles: true
      });
      document.dispatchEvent(updateEvent);
    }

    onButtonClick(event) {
      event.preventDefault();
      event.stopPropagation();
      
      if (this.isUpdating) return; // Prevent clicks while updating
      
      const currentVal = parseInt(this.input.value) || 0;
      const minVal = parseInt(this.input.min, 10) || 0;
      const maxVal = parseInt(this.input.max, 10) || Infinity;
      let newVal = currentVal;

      if (event.target.name === 'plus') {
        if (currentVal >= maxVal) return; // Don't increment beyond max
        
        // if zero and min is higher, jump to min
        if (currentVal === 0 && minVal > 0) {
          newVal = minVal;
        } else {
          newVal = currentVal + 1;
        }
      } else if (event.target.name === 'minus') {
        if (currentVal <= minVal) return; // Don't decrement below min
        newVal = currentVal - 1;
      }

      // Update the input value explicitly
      if (newVal !== currentVal) {
        this.input.value = newVal;
        this.input.dispatchEvent(this.changeEvent);
      }

      // re-validate your +/- button states
      this.validateQtyRules();
    }

    validateQtyRules() {
      const val = this.input.valueAsNumber || 0;
      const minVal = this.input.min ? parseInt(this.input.min, 10) : 0;
      const maxVal = this.input.max ? parseInt(this.input.max, 10) : Infinity;

      // disable "–" if at or below min
      const btnMinus = this.querySelector("button[name='minus']");
      if (btnMinus) {
        btnMinus.disabled = val <= minVal;
      }

      // disable "+" if at or above max
      const btnPlus = this.querySelector("button[name='plus']");
      if (btnPlus) {
        btnPlus.disabled = val >= maxVal;
      }
    }
  }

  customElements.define('ma-quantity-input', QuantityInput);

document.addEventListener('DOMContentLoaded', function() {
  const loadingSvg = document.querySelector('.loading__spinner');
  const btn = document.querySelector('.remove-all');
  
  const currency = "{{ shop.currency }}";
  const locale = "{{ shop.locale | default: "" }}" || navigator.language;

  const discountTiers = [
    { min: 1, max: 4, discount: 0.39 },
    { min: 5, max: 9, discount: 0.43 },
    { min: 10, max: Infinity, discount: 0.45 }
  ];

  let moneyFmt = new Intl.NumberFormat(locale, {
    style: "currency",
    currency: currency
  });

  function formatPrice(cents) {
    return moneyFmt.format(cents / 100);
  }
  
  // Update header cart count and price
  function updateHeaderCart(cart) {
    // Calculate total quantity (sum of all item quantities)
    const totalQuantity = cart.items.reduce((sum, item) => sum + item.quantity, 0);
    
    // Update cart count in header
    const cartCountElements = document.querySelectorAll('[data-header-cart-count]');
    cartCountElements.forEach(el => {
      el.textContent = `(${totalQuantity})`;
    });
    
    // Update cart price in header
    const cartPriceElements = document.querySelectorAll('[data-header-cart-price]');
    cartPriceElements.forEach(el => {
      el.textContent = formatPrice(cart.total_price);
    });
    
    // Update cart full status
    const cartFullElements = document.querySelectorAll('[data-header-cart-full]');
    cartFullElements.forEach(el => {
      el.setAttribute('data-header-cart-full', totalQuantity > 0);
    });
    
    // Update visible cart count badges
    const cartBadgeElements = document.querySelectorAll('[data-cart-count-badge]');
    cartBadgeElements.forEach(badge => {
      badge.textContent = totalQuantity;
      if (totalQuantity === 0) {
        badge.classList.add('hidden');
      } else {
        badge.classList.remove('hidden');
      }
    });
  }
  
  // Calculate total quantity across all variants
  function getTotalQuantity() {
    let total = 0;
    document.querySelectorAll('tr[data-variant-id] .qty').forEach(input => {
      total += parseInt(input.value) || 0;
    });
    return total;
  }
  
  // — helper to change a line item —
  async function updateCart(quantity, lineIndex) {
    return await fetch('/cart/change.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ line: lineIndex, quantity: quantity })
    }).then(res => res.json());
  }

  async function addCart(variantId, quantity) {
    return await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: variantId, quantity: quantity })
    }).then(res => res.json());
  }

  // — helper to refresh the summary at bottom —
  function refreshSummary(cart) {
    // Calculate total quantity (sum of all item quantities)
    const totalQuantity = cart.items ? cart.items.reduce((sum, item) => sum + item.quantity, 0) : getTotalQuantity();
    
    const count = document.querySelector('.action-total strong');
    const originalPrice = document.querySelector('.summary .original-price');
    const subtotal = document.querySelector('.summary .price');
    const totalSavings = document.querySelector('.summary .total-savings');
    
    btn.disabled = totalQuantity === 0;
    if (count) count.textContent = totalQuantity;
    
    // Calculate totals by summing up the displayed row totals
    let calculatedSubtotal = 0;
    let originalTotal = 0;
    
    document.querySelectorAll('tr[data-variant-id]').forEach(row => {
      const qty = parseInt(row.querySelector('.qty').value) || 0;
      const totalAmountElement = row.querySelector('.total-cell .total-amount');
      const msrp = parseInt(row.dataset.msrpPrice, 10);
      
      // Get the displayed total amount (remove currency symbol and parse)
      if (totalAmountElement && qty > 0) {
        const displayedTotal = totalAmountElement.textContent.replace(/[^0-9.-]/g, '');
        calculatedSubtotal += parseFloat(displayedTotal) * 100; // Convert to cents
      }
      
      originalTotal += msrp * qty;
    });
    
    const savings = originalTotal - calculatedSubtotal;
    
    // Show/hide original price based on whether there are items
    if (originalPrice) {
      if (cart.item_count > 0 && savings > 0) {
        originalPrice.style.display = 'block';
        originalPrice.textContent = formatPrice(originalTotal);
      } else {
        originalPrice.style.display = 'none';
      }
    }
    
    if (subtotal) subtotal.textContent = formatPrice(calculatedSubtotal);
    
    // Show/hide savings based on whether there's a discount
    if (totalSavings) {
      if (savings > 0) {
        totalSavings.style.display = 'block';
        totalSavings.textContent = `You save ${formatPrice(savings)}`;
      } else {
        totalSavings.style.display = 'none';
      }
    }
  }

  function getDiscountedPrice(totalQuantity, msrp) {
    if (totalQuantity === 0) return msrp;
    const tier = discountTiers.find(t => totalQuantity >= t.min && totalQuantity <= t.max);
    if (tier) {
      return Math.round(msrp * (1 - tier.discount));
    }
    return msrp;
  }

  function getDiscountPercentage(totalQuantity) {
    const tier = discountTiers.find(t => totalQuantity >= t.min && totalQuantity <= t.max);
    return tier ? Math.round(tier.discount * 100) : 0;
  }

  function getNextTierInfo(totalQuantity) {
    if (totalQuantity === 0) return null;
    const nextTier = discountTiers.find(t => totalQuantity < t.min);
    if (nextTier) {
      const currentTier = discountTiers.find(t => totalQuantity >= t.min && totalQuantity <= t.max);
      const itemsNeeded = nextTier.min - totalQuantity;
      const additionalDiscount = Math.round((nextTier.discount - (currentTier?.discount || 0)) * 100);
      return {
        itemsNeeded,
        additionalDiscount,
        nextTierDiscount: Math.round(nextTier.discount * 100)
      };
    }
    return null;
  }

  // Update all rows when any quantity changes
  function updateAllPricesAndTotals() {
    const totalQty = getTotalQuantity();
    
    document.querySelectorAll('tr[data-variant-id]').forEach(row => {
      const qty = parseInt(row.querySelector('.qty').value) || 0;
      const msrpPriceCents = parseInt(row.dataset.msrpPrice, 10);
      const priceCell = row.querySelector('.price-cell .current-price');
      const totalCell = row.querySelector('.total-cell');
      const totalAmountEl = row.querySelector('.total-cell .total-amount');
      const hintEl = row.querySelector('.total-cell .next-tier-hint');
      
      if (qty === 0) {
        // Show only MSRP when quantity is 0
        if (priceCell) {
          priceCell.innerHTML = formatPrice(msrpPriceCents);
        }
        if (totalAmountEl) {
          totalAmountEl.textContent = formatPrice(0);
        }
        if (hintEl) {
          hintEl.textContent = ''; // Clear hint text
        }
      } else {
        const discountedPrice = getDiscountedPrice(totalQty, msrpPriceCents);
        const discountPercent = getDiscountPercentage(totalQty);
        const savings = msrpPriceCents - discountedPrice;
        const total = discountedPrice * qty;
        
        // Update price display
        if (priceCell) {
          priceCell.innerHTML = `
            ${formatPrice(discountedPrice)}
            ${discountPercent > 0 ? `<span class="discount-badge" style="display:inline-block;">Save ${discountPercent}%</span>` : ''}
            ${savings > 0 ? `<span class="savings-text">You save ${formatPrice(savings)}</span>` : ''}
          `;
        }
        
        // Update total amount
        if (totalAmountEl) {
          totalAmountEl.textContent = formatPrice(total);
        }
        
        // Update hint text
        if (hintEl) {
          const nextTier = getNextTierInfo(totalQty);
          if (nextTier && totalQty > 0) {
            hintEl.textContent = `Buy ${nextTier.itemsNeeded} more to save ${nextTier.nextTierDiscount}%`;
          } else {
            hintEl.textContent = ''; // Clear hint text
          }
        }
        
        // Update data attribute
        row.dataset.price = discountedPrice;
      }
    });
  }

  // — wire up each variant row —
  const updateQueue = new Map(); // Track pending updates per variant
  const variantHandlers = new Map(); // Track event handlers to prevent duplicates
  
  document.querySelectorAll('tr[data-variant-id]').forEach(row => {
    const vid = row.dataset.variantId;
    let priceCents = parseInt(row.dataset.price, 10);
    const basePriceCents = parseInt(row.dataset.basePrice, 10);
    const msrpPriceCents = parseInt(row.dataset.msrpPrice, 10);
    const qtyInput = row.querySelector('.qty');
    const totalCell = row.querySelector('.total-cell');
    const priceCell = row.querySelector('.price-cell .current-price');
    const decBtn = row.querySelector(".MA-quantity__button[name='minus']");
    const incBtn = row.querySelector(".MA-quantity__button[name='plus']");
    const remBtn = row.querySelector('.remove-variant');
    const quantityElement = row.querySelector('ma-quantity-input');
    const maxInventory = parseInt(row.dataset.inventory, 10);

    // Initialize button states based on current value
    function updateButtonStates() {
      const qty = parseInt(qtyInput.value) || 0;
      
      if (decBtn) decBtn.disabled = qty <= 0;
      if (incBtn) incBtn.disabled = qty >= maxInventory;
      
      // Disable remove button when quantity is 0, otherwise enable it
      if (remBtn) {
        remBtn.disabled = qty === 0;
      }
    }

    // Initialize button states on page load
    updateButtonStates();

    async function handleCartUpdate(newQty) {
      // Prevent multiple simultaneous updates for same variant
      if (updateQueue.has(vid)) {
        return updateQueue.get(vid);
      }
      
      // Validate quantity against inventory
      if (newQty > maxInventory) {
        alert(`Only ${maxInventory} items available in stock`);
        newQty = maxInventory;
        qtyInput.value = newQty;
      }
      
      qtyInput.value = newQty;
      updateButtonStates();
      
      // Update all rows and refresh summary immediately for instant UI feedback
      updateAllPricesAndTotals();
      
      // Create a temporary cart object for immediate summary update
      const tempCart = {
        item_count: getTotalQuantity(),
        total_price: 0
      };
      refreshSummary(tempCart);

      if (quantityElement) {
        quantityElement.isUpdating = true;
      }
      
      loadingSvg.style.display = 'flex';
      btn.style.display = 'none';
      
      const updatePromise = (async () => {
        try {
          const cart = await fetch('/cart.js').then(r => r.json());
          const item = cart.items.find(i => i.variant_id == vid);
          const lineIndex = cart.items.findIndex(i => i.variant_id == vid) + 1;
          
          let updatedCart;
          if (item && newQty > 0) {
            // Update existing item
            updatedCart = await updateCart(newQty, lineIndex);
          } else if (!item && newQty > 0) {
            // Add new item
            updatedCart = await addCart(vid, newQty);
          } else if (item && newQty === 0) {
            // Remove item
            updatedCart = await updateCart(0, lineIndex);
          } else {
            // No change needed
            updatedCart = cart;
          }
          
          // Refresh the display with the updated cart
          await handleResponse(updatedCart);
        } catch (error) {
          console.error('Cart update failed:', error);
          // Revert to cart state on error
          const cart = await fetch('/cart.js').then(r => r.json());
          const item = cart.items.find(i => i.variant_id == vid);
          qtyInput.value = item ? item.quantity : 0;
          updateButtonStates();
          updateAllPricesAndTotals();
          refreshSummary(cart);
        } finally {
          updateQueue.delete(vid);
          loadingSvg.style.display = 'none';
          btn.style.display = 'inline-block';
          if (quantityElement) {
            setTimeout(() => {
              quantityElement.isUpdating = false;
            }, 100);
          }
        }
      })();
      
      updateQueue.set(vid, updatePromise);
      return updatePromise;
    }

    async function handleResponse(cart) {
      try {
        // If cart not provided, fetch it
        if (!cart) {
          cart = await fetch('/cart.js').then(r => r.json());
        }
        
        const item = cart.items.find(i => i.variant_id == vid);
        const qty = item ? item.quantity : 0;
        
        qtyInput.value = qty;
        updateButtonStates();
        
        // Update all prices based on total quantity
        updateAllPricesAndTotals();
        
        refreshSummary(cart);
        
        // Update header cart count and price
        updateHeaderCart(cart);
        
        // Dispatch cart update complete event - critical for wholesale customer reload
        setTimeout(() => {
          document.dispatchEvent(new Event('cartUpdateComplete'));
        }, 100);
        
        // Wait for wholesale pricing to recalculate before refreshing display
        {% if wcp_wholesale_customer == true %}
        // For wholesale customers, wait for WCP to recalculate prices
