          // Fetch updated cart with wholesale prices applied
          const updatedCart = await fetch('/cart.js').then(r => r.json());
          
          // Update all rows with wholesale pricing
          document.querySelectorAll('tr[data-variant-id]').forEach(r => {
            const variantId = r.dataset.variantId;
            const updatedItem = updatedCart.items.find(i => i.variant_id == variantId);
            const qInput = r.querySelector('.qty');
            
            if (updatedItem && qInput) {
              qInput.value = updatedItem.quantity;
            } else if (qInput) {
              qInput.value = 0;
            }
          });
          
          updateAllPricesAndTotals();
          refreshSummary(updatedCart);
        }, 1500); // Wait for WCP calculations to complete
        {% endif %}
      } catch (error) {
        console.error('Failed to handle response:', error);
      }
    }

    // Listen for quantity changes - only attach once per variant
    if (!variantHandlers.has(vid)) {
      const handler = function(event) {
        if (event.detail.variantId == vid) {
          handleCartUpdate(event.detail.quantity);
        }
      };
      
      document.addEventListener('quantityChanged', handler);
      variantHandlers.set(vid, handler);
    }

    remBtn.addEventListener('click', async () => {
      await handleCartUpdate(0);
    });
  });

  // Fetch initial cart state and initialize display
  fetch('/cart.js').then(r => r.json()).then(cart => {
    // Update each row with actual cart quantities
    document.querySelectorAll('tr[data-variant-id]').forEach(r => {
      const variantId = r.dataset.variantId;
      const item = cart.items.find(i => i.variant_id == variantId);
      const qInput = r.querySelector('.qty');
      const remBtn = r.querySelector('.remove-variant');
      
      if (item && qInput) {
        qInput.value = item.quantity;
        // Enable delete button if quantity > 0
        if (remBtn) {
          remBtn.disabled = false;
        }
      } else if (qInput) {
        qInput.value = 0;
        // Disable delete button if quantity is 0
        if (remBtn) {
          remBtn.disabled = true;
        }
      }
    });
    
    // Update all prices and totals based on total quantity
    updateAllPricesAndTotals();
    refreshSummary(cart);
  });

  // — "Remove all" button —
  document.querySelector('.remove-all').addEventListener('click', async function() {
    if (!confirm('Are you sure you want to remove all items from cart?')) {
      return;
    }
    
    loadingSvg.style.display = 'flex';
    btn.style.display = 'none';
    btn.disabled = true;
    
    try {
      // Clear the cart
      const response = await fetch('/cart/clear.js', { method: 'POST' });
      const cart = await response.json();
      
      // Reset all quantity inputs to 0
      document.querySelectorAll('tr[data-variant-id]').forEach(row => {
        const qtyInput = row.querySelector('.qty');
        const totalAmountEl = row.querySelector('.total-cell .total-amount');
        const hintEl = row.querySelector('.total-cell .next-tier-hint');
        const priceCell = row.querySelector('.price-cell .current-price');
        const decBtn = row.querySelector(".MA-quantity__button[name='minus']");
        const incBtn = row.querySelector(".MA-quantity__button[name='plus']");
        const remBtn = row.querySelector('.remove-variant');
        const msrp = parseInt(row.dataset.msrpPrice, 10);
        
        // Reset quantity to 0
        if (qtyInput) qtyInput.value = 0;
        
        // Reset total display
        if (totalAmountEl) totalAmountEl.textContent = formatPrice(0);
        if (hintEl) hintEl.textContent = '';
        
        // Reset price display to MSRP
        if (priceCell) priceCell.innerHTML = formatPrice(msrp);
        
        // Update button states
        if (decBtn) decBtn.disabled = true;
        if (incBtn) incBtn.disabled = false; // Re-enable add button
        if (remBtn) remBtn.disabled = true;
      });
      
      // Update all prices and totals
      updateAllPricesAndTotals();
      
      // Refresh summary display
      refreshSummary(cart);
      
      // Update header cart count and price
      updateHeaderCart(cart);
      
      // Dispatch cart change event for other components
      document.dispatchEvent(new CustomEvent('theme:cart:change', {
        detail: { cart: cart },
        bubbles: true
      }));
      
      // Dispatch cart update complete event
      document.dispatchEvent(new Event('cartUpdateComplete'));
      
      // Show success message (optional)
      console.log('Cart cleared successfully');
      
    } catch (error) {
      console.error('Failed to clear cart:', error);
      alert('Failed to clear cart. Please try again.');
    } finally {
      loadingSvg.style.display = 'none';
      btn.style.display = 'inline-block';
      btn.disabled = false;
    }
  });
});
</script>

