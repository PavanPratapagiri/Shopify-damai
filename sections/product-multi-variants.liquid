<style>
  .product-section-variants{
    margin-bottom: 50px;
    transition: padding 0.3s ease;
  }

  /* — Variant table — */
.variant-table {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed; /* Ensure consistent column widths */
  transition: all 0.3s ease;
}
.variant-table th,
.variant-table td {
  padding: 12px 16px;
  vertical-align: middle;
  font-size: 14px;
  color: #000;
  font-weight: 600;
  border-bottom: none;
  transition: padding 0.3s ease, font-size 0.3s ease;
}
.variant-table tr{
  border-bottom: 1px solid #e1e1e1;
  transition: background-color 0.3s ease;
}

.variant-table tr:hover {
  background-color: #f9f9f9;
}

.variant-table td.price,
.variant-table td.total{
  text-align: right;
}
.variant-table th {
  font-weight: 600;
  text-transform: uppercase;
  font-size: 11px;
  color: #000000BF;
  padding-bottom: 16px;
  transition: font-size 0.3s ease, padding 0.3s ease;
}

/* SKU Column - Left aligned */
.variant-table th:first-child {
  text-align: left;
  width: 20%;
  transition: width 0.3s ease;
}

.variant-table td.sku {
  text-align: left;
}

/* Quantity Column - Center aligned */
.variant-table th.quantity-heading{
  text-align: center;
  width: 20%;
  transition: width 0.3s ease;
}

/* Stock Column - Center aligned */
.variant-table th.stock-heading{
  text-align: center;
  width: 20%;
  transition: width 0.3s ease, opacity 0.3s ease;
}

/* MSRP Column - Right aligned */
.variant-table th.price-heading{
  text-align: right;
  width: 20%;
  transition: width 0.3s ease, opacity 0.3s ease;
}

/* Total Column - Right aligned */
.variant-table th.total-heading{
  text-align: right;
  width: 20%;
  transition: width 0.3s ease;
}

  .variant-table td.sku span{
    font-weight: 600;
    font-size: 14px;
    transition: font-size 0.3s ease;
  }

  .variant-table td.sku small{
    font-size: 11px;
    color: #000000BF;
    font-weight: 600;
    transition: font-size 0.3s ease;
  }

  .variant-table td.sku .price{
    display:none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .variant-table .price-cell {
    text-align: end;
  }
  
  .variant-table .price-cell .msrp {
    font-size: 16px;
    color: #000;
    text-decoration: none;
    margin-bottom: 0px;
    display: block;
    font-weight: 600;
    transition: font-size 0.3s ease;
  }
  
  .variant-table .price-cell .current-price {
    font-weight: 600;
    color: #000;
    display: block;
    text-align: right;
    font-size: 16px;
    transition: font-size 0.3s ease;
  }

  .variant-table .price-cell .discount-badge {
    background: #28a745;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    display: none !important;
  }

  .variant-table .price-cell .savings-text {
    color: #dc3545;
    font-size: 14px;
    font-weight: 600;
    display: none !important;
  }

  /* Hide price details when quantity is 0 */
  .variant-table tr[data-quantity="0"] .price-cell .msrp,
  .variant-table tr[data-quantity="0"] .price-cell .savings-text {
    display: none;
  }

  .variant-table .total-cell {
    position: relative;
    text-align: end;
    min-width: 150px; /* Reserve space for total column */
    transition: min-width 0.3s ease, padding 0.3s ease;
  }

  .variant-table .total-cell .total-amount {
    font-size: 16px;
    font-weight: 700;
    color: #000;
    display: block;
    transition: font-size 0.3s ease;
  }

  .variant-table .total-cell .next-tier-hint {
    font-size: 10px;
    color: #667eea;
    margin-top: 2px;
    font-weight: 600;
    min-height: 14px; /* Always reserve space for hint text */
    display: block; /* Always display, even when empty */
    visibility: visible;
    transition: font-size 0.3s ease, min-height 0.3s ease;
  }

  .variant-table .next-tier-hint:empty {
    visibility: hidden; /* Hide when empty but keep space */
  }

/* — Quantity controls — */
  ma-quantity-input{
    display: flex;
    align-items: center;
    border: 1px solid #000;
    opacity: .85;
    border-radius: 4px;
    overflow: hidden;
    background: #fff;
    width: 140px; /* Fixed width instead of min-width */
    max-width: 140px; /* Prevent expansion */
    height: 40px;
    flex-shrink: 0; /* Prevent shrinking */
    transition: width 0.3s ease, max-width 0.3s ease, height 0.3s ease;
  }
.variant-table .quantity-cell {
  display: flex;
  align-items: center;
  flex-direction: column;
  gap: 10px;
  padding-block: 17px; 
  justify-content: center;
  width: 250px; /* Fixed width to prevent shifting */
  min-width: 250px; /* Ensure minimum width */
  text-align: center; /* Center alignment */
  padding-left: 0; /* Remove left padding */
  padding-right: 0; /* Remove right padding */
  transition: width 0.3s ease, min-width 0.3s ease, padding 0.3s ease, gap 0.3s ease;
}

.variant-table .quantity-cell .quantity-wrapper {
  display: flex;
  align-items: center;
  gap: 15px;
  flex-shrink: 0; /* Prevent shrinking */
  justify-content: center; /* Center items */
  width: auto; /* Change from 100% to auto */
  margin: 0 auto; /* Center the wrapper */
  transition: gap 0.3s ease;
}

.variant-table .stock-cell {
  text-align: center;
  font-size: 16px;
  color: #000;
  vertical-align: middle;
  transition: font-size 0.3s ease, opacity 0.3s ease;
}

.variant-table .stock-cell.out-of-stock {
  color: #999;
}

.variant-table .quantity-cell .stock-info {
  font-size: 11px;
  color: #666;
  font-weight: 500;
}

.qty-btn {
  width: 2rem;
  height: 2rem;
  line-height: 1;
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 4px;
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.2s ease;
}
.qty-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
.qty {
  min-width: 3rem;
  text-align: center;
  display: inline-block;
}
  
.MA-quantity__button {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    font-size: 20px;
    border: 0;
    background-color: #f5f5f5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    padding: 0;
    transition: background-color 0.2s, width 0.3s ease, height 0.3s ease, font-size 0.3s ease;
}

  .MA-quantity__button:hover:not(:disabled) {
    background-color: #e0e0e0;
  }

  .MA-quantity__button:disabled{
    cursor: not-allowed;
    opacity: 0.4;
    background-color: #f9f9f9;
  }
  
  .product-section-variants .MA-quantity__input {
    color: #000;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    background-color: transparent;
    border: 0;
    width: 60px;
    flex-grow: 0;
    -webkit-appearance: none;
    appearance: none;
    margin: 0px;
    padding: 10px 6px;
    min-height: 40px;
    transition: width 0.3s ease, font-size 0.3s ease, padding 0.3s ease, min-height 0.3s ease;
}

  .product-section-variants .MA-quantity__input:focus {
    outline: none;
  }
  
.remove-variant {
  background-color: #787c83;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: #fff;
  border-radius: 2px;
  padding: 6px 8px;
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 32px;
  min-height: 32px;
  transition: background-color 0.2s ease, opacity 0.2s ease, min-width 0.3s ease, min-height 0.3s ease, padding 0.3s ease;
}
.remove-variant svg{
  width: 16px;
  height: 16px;
  transition: width 0.3s ease, height 0.3s ease;
}
.remove-variant svg path{
  fill: #fff;
}
.remove-variant:hover:not(:disabled) {
  background-color: #e00;
}

.remove-variant:disabled {
  cursor: not-allowed;
  opacity: 0.4;
  background-color: #999;
}

.loading__spinner.hidden {
  display: none;
}

/* — Actions & summary — */
.actions {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: start;
  margin-block: 16px;
  gap: 30px;
  transition: grid-template-columns 0.3s ease, gap 0.3s ease, margin 0.3s ease;
}

.action-btns{
  display: flex;
  align-items: center;
  gap: 20px;
  grid-column: 1;
  justify-self: start;
  transition: gap 0.3s ease, flex-direction 0.3s ease;
}

.action-total{
  font-size: 16px;
  text-align: center;
  flex-shrink: 0;
  display: flex;
  padding-left: 65px; /* Reduced from 85px to 65px (moved 20px left) */
  flex-direction: column;
  align-items: center;
  gap: 4px;
  grid-column: 2;
  justify-self: center;
  transition: padding 0.3s ease, font-size 0.3s ease, flex-direction 0.3s ease, gap 0.3s ease;
}
.action-total strong{
  font-weight: 600;
  font-size: 20px;
  transition: font-size 0.3s ease;
}
.action-total p{
  margin: 0;
  white-space: nowrap;
}

.summary {
  grid-column: 3;
  justify-self: end;
  text-align: right;
  font-size: 0.9rem;
  color: #000;
  transition: text-align 0.3s ease, justify-self 0.3s ease;
}

.action-btns-spin{
  position: relative;
  min-width: 150px;
  min-height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: min-width 0.3s ease, min-height 0.3s ease;
}

.summary strong {
  font-size: 1.1rem;
  transition: font-size 0.3s ease;
}
.summary .original-price {
  display: block;
  margin-top: 0.25rem;
  font-size: 14px;
  color: #dc3545;
  text-decoration: line-through;
  font-weight: 500;
  transition: font-size 0.3s ease;
}
.summary .price {
  display: block;
  margin-top: 0.25rem;
  font-size: 16px;
  color: #000;
  font-weight: 600;
  transition: font-size 0.3s ease;
}
.summary .total-savings {
  display: block;
  margin-top: 4px;
  font-size: 14px;
  color: #28a745;
  font-weight: 600;
  transition: font-size 0.3s ease;
}
.summary .subtotal{
  color: #000000BF;
  font-size: 16px;
  font-weight: 400;
  transition: font-size 0.3s ease;
}
/* Loading spinner */

.loading__spinner {
  width: 26px;
  display: flex;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.loading__spinner .spinner {
  animation: rotator 1.4s linear infinite;
}

.loading__spinner .path {
  stroke-dasharray: 280;
  stroke-dashoffset: 0;
  transform-origin: center;
  stroke: #000000BF;
  animation: spinner-dash 1.4s ease-in-out infinite;
}

@keyframes spinner-dash {
  0% {
    stroke-dashoffset: 280;
  }
  50% {
    stroke-dashoffset: 75;
    transform: rotate(135deg);
  }
  100% {
    stroke-dashoffset: 280;
    transform: rotate(450deg);
  }
}

@keyframes rotator {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(270deg);
  }
}

