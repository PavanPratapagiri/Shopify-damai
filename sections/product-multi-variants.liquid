<script>
  class QuantityInput extends HTMLElement {
    constructor() {
      super();
      this.input = this.querySelector('input');
      this.changeEvent = new Event('change', { bubbles: true });
      this.isUpdating = false;

      // wire up input change and button clicks
      this.input.addEventListener('change', this.onInputChange.bind(this));
      this.input.addEventListener('input', this.onInputChange.bind(this));
      this.querySelectorAll('button').forEach(button =>
        button.addEventListener('click', this.onButtonClick.bind(this))
      );
    }

    connectedCallback() {
      // Initialize button states when element is added to DOM
      this.validateQtyRules();
    }

    onInputChange(event) {
      // Prevent negative values and enforce integer
      let value = parseInt(this.input.value) || 0;
      if (value < 0) value = 0;
      if (this.input.max && value > parseInt(this.input.max)) {
        value = parseInt(this.input.max);
      }
      this.input.value = value;
      
      // enforce min/max every time the user types a value
      this.validateQtyRules();
      
      // Only trigger cart update on 'change' event (when user is done typing)
      if (event.type === 'change' && !this.isUpdating) {
        this.updateCartFromInput();
      }
    }

    updateCartFromInput() {
      const row = this.closest('tr[data-variant-id]');
      if (!row) return;
      
      const vid = row.dataset.variantId;
      const newQty = parseInt(this.input.value) || 0;
      
      // Find and trigger the update function for this variant
      const updateEvent = new CustomEvent('quantityChanged', {
        detail: { variantId: vid, quantity: newQty },
        bubbles: true
      });
      document.dispatchEvent(updateEvent);
    }

    onButtonClick(event) {
      event.preventDefault();
      event.stopPropagation();
      
      if (this.isUpdating) return; // Prevent clicks while updating
      
      const currentVal = parseInt(this.input.value) || 0;
      const minVal = parseInt(this.input.min, 10) || 0;
      const maxVal = parseInt(this.input.max, 10) || Infinity;
      let newVal = currentVal;

      if (event.target.name === 'plus') {
        if (currentVal >= maxVal) return; // Don't increment beyond max
        
        // if zero and min is higher, jump to min
        if (currentVal === 0 && minVal > 0) {
          newVal = minVal;
        } else {
          newVal = currentVal + 1;
        }
      } else if (event.target.name === 'minus') {
        if (currentVal <= minVal) return; // Don't decrement below min
        newVal = currentVal - 1;
      }

      // Update the input value explicitly
      if (newVal !== currentVal) {
        this.input.value = newVal;
        this.input.dispatchEvent(this.changeEvent);
      }

      // re-validate your +/- button states
      this.validateQtyRules();
    }

    validateQtyRules() {
      const val = this.input.valueAsNumber || 0;
      const minVal = this.input.min ? parseInt(this.input.min, 10) : 0;
      const maxVal = this.input.max ? parseInt(this.input.max, 10) : Infinity;

      // disable "–" if at or below min
      const btnMinus = this.querySelector("button[name='minus']");
      if (btnMinus) {
        btnMinus.disabled = val <= minVal;
      }

      // disable "+" if at or above max
      const btnPlus = this.querySelector("button[name='plus']");
      if (btnPlus) {
        btnPlus.disabled = val >= maxVal;
      }
    }
  }

  customElements.define('ma-quantity-input', QuantityInput);

