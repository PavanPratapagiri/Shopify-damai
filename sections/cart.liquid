<!-- /sections/cart.liquid -->
{%- liquid
  assign hide_quantity = 'quantity--hide'
  if settings.cart_show_quantity
    assign hide_quantity = ''
  endif

  assign ajax_disable = false
  assign no_ajax_class = ''
  if settings.cart_style == 'compatible'
    assign ajax_disable = true
    assign no_ajax_class = 'no--ajax'
  endif

  assign full_init = ''
  assign empty_init = 'cart--hidden'
  if cart.item_count == 0
    assign empty_init = ''
    assign full_init = 'cart--hidden'
  endif
-%}

<style>
  /* Cart table styles matching product multi-variants */
  .cart-variant-table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
    transition: all 0.3s ease;
    margin-bottom: 30px;
  }
  
  .cart-variant-table th,
  .cart-variant-table td {
    padding: 12px 16px;
    vertical-align: middle;
    font-size: 14px;
    color: #000;
    font-weight: 600;
    border-bottom: none;
    transition: padding 0.3s ease, font-size 0.3s ease;
  }
  
  .cart-variant-table tr {
    border-bottom: 1px solid #e1e1e1;
    transition: background-color 0.3s ease;
  }
  
  .cart-variant-table tr:hover {
    background-color: #f9f9f9;
  }
  
  .cart-variant-table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 11px;
    color: #000000BF;
    padding-bottom: 16px;
    background-color: #fff;
    transition: font-size 0.3s ease, padding 0.3s ease;
  }
  
  /* Column widths - 4 columns layout */
  .cart-variant-table th.product-heading {
    text-align: left;
    width: 35%;
  }
  
  .cart-variant-table th.price-heading {
    text-align: right;
    width: 20%;
  }
  
  .cart-variant-table th.quantity-heading {
    text-align: center;
    width: 25%;
  }
  
  .cart-variant-table th.total-heading {
    text-align: right;
    width: 20%;
  }
  
  /* Product cell */
  .cart-product-cell {
    text-align: left;
  }
  
  .cart-product-info {
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }
  
  .cart-product-image {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 4px;
    border: 1px solid #e1e1e1;
  }
  
  .cart-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .cart-product-details {
    flex: 1;
    min-width: 0;
  }
  
  .cart-product-title {
    font-weight: 600;
    font-size: 16px;
    color: #000;
    text-decoration: none;
    display: block;
    margin-bottom: 8px;
    line-height: 1.3;
  }
  
  .cart-product-title:hover {
    color: #666;
  }
  
  .cart-product-meta {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .cart-product-meta small {
    font-size: 12px;
    color: #666;
    font-weight: 500;
  }
  
  .cart-sku {
    font-size: 11px !important;
    color: #999 !important;
  }
  
  /* Price cell - matching product multi-variants */
  .cart-price-cell {
    text-align: right;
  }
  
  .cart-msrp {
    font-size: 14px;
    color: #000;
    text-decoration: none;
    margin-bottom: 4px;
    display: block;
    font-weight: 600;
  }
  
  .cart-current-price {
    font-weight: 600;
    color: #000;
    display: block;
    text-align: right;
    font-size: 16px;
  }
  
  /* Quantity cell - matching product multi-variants */
  .cart-quantity-cell {
    text-align: center;
  }
  
  .cart-quantity-wrapper {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
  }
  
  /* Quantity input - matching product multi-variants exactly */
  ma-quantity-input {
    display: flex;
    align-items: center;
    border: 1px solid #000;
    opacity: .85;
    border-radius: 4px;
    overflow: hidden;
    background: #fff;
    width: 140px;
    max-width: 140px;
    height: 40px;
    flex-shrink: 0;
    transition: width 0.3s ease, max-width 0.3s ease, height 0.3s ease;
  }
  
  .MA-quantity__button {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    font-size: 20px;
    border: 0;
    background-color: #f5f5f5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    padding: 0;
    transition: background-color 0.2s, width 0.3s ease, height 0.3s ease, font-size 0.3s ease;
  }
  
  .MA-quantity__button:hover:not(:disabled) {
    background-color: #e0e0e0;
  }
  
  .MA-quantity__button:disabled {
    cursor: not-allowed;
    opacity: 0.4;
    background-color: #f9f9f9;
  }
  
  .MA-quantity__input {
    color: #000;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    background-color: transparent;
    border: 0;
    width: 60px;
    flex-grow: 0;
    -webkit-appearance: none;
    appearance: none;
    margin: 0px;
    padding: 10px 6px;
    min-height: 40px;
    transition: width 0.3s ease, font-size 0.3s ease, padding 0.3s ease, min-height 0.3s ease;
  }
  
  .MA-quantity__input:focus {
    outline: none;
  }
  
  /* Remove button - matching product multi-variants */
  .remove-variant {
    background-color: #787c83;
    border: none;
    font-size: 1.2rem;
    cursor: pointer;
    color: #fff;
    border-radius: 2px;
    padding: 6px 8px;
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 32px;
    min-height: 32px;
    transition: background-color 0.2s ease, opacity 0.2s ease, min-width 0.3s ease, min-height 0.3s ease, padding 0.3s ease;
  }
  
  .remove-variant svg {
    width: 16px;
    height: 16px;
    transition: width 0.3s ease, height 0.3s ease;
  }
  
  .remove-variant svg path {
    fill: #fff;
  }
  
  .remove-variant:hover:not(:disabled) {
    background-color: #e00;
  }
  
  .remove-variant:disabled {
    cursor: not-allowed;
    opacity: 0.4;
    background-color: #999;
  }
  
  /* Total cell - matching product multi-variants */
  .cart-total-cell {
    position: relative;
    text-align: right;
    min-width: 150px;
    transition: min-width 0.3s ease, padding 0.3s ease;
  }
  
  .cart-compare-total {
    display: block;
    font-size: 13px;
    color: #999;
    opacity: 0.7;
    margin-bottom: 4px;
    text-decoration: line-through;
  }
  
  .cart-total-amount {
    font-size: 16px;
    font-weight: 700;
    color: #000;
    display: block;
    transition: font-size 0.3s ease;
  }
  
  .cart-next-tier-hint {
    font-size: 10px;
    color: #667eea;
    margin-top: 2px;
    font-weight: 600;
    min-height: 14px;
    display: block;
    visibility: visible;
    transition: font-size 0.3s ease, min-height 0.3s ease;
  }
  
  .cart-next-tier-hint:empty {
    visibility: hidden;
  }
  
  /* Discount row */
  .cart-discount-row td {
    padding: 8px 16px;
    border-bottom: 1px solid #e1e1e1;
  }
  
  .cart__items__savings {
    background: #f0f9ff;
    padding: 8px 12px;
    border-radius: 4px;
    display: inline-block;
  }
  
  .item__total__savings {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: #0369a1;
    font-weight: 600;
  }
  
  .cart__icon--tags {
    display: inline-flex;
    width: 16px;
    height: 16px;
  }
  
  /* Loading state styles */
  .cart--loading {
    position: relative;
    pointer-events: none;
    opacity: 0.6;
  }
  
  .cart--loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin: -20px 0 0 -20px;
    border: 3px solid #f3f3f3;
    border-top: 3px solid #333;
    border-radius: 50%;
    animation: cart-spin 1s linear infinite;
    z-index: 9999;
  }
  
  @keyframes cart-spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  /* Error message styles */
  .cart__error {
    background: #fee;
    color: #c33;
    padding: 12px 16px;
    border-radius: 4px;
    margin-bottom: 16px;
    display: none;
  }
  
  .cart__error.active {
    display: block;
    animation: slideIn 0.3s ease;
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Smooth transitions */
  .cart__items__row {
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  
  .cart__items__row.removing {
    opacity: 0;
    transform: translateX(-20px);
  }
  
  /* Prevent layout shift */
  .cart__template {
    min-height: 400px;
  }
  
  /* Tablet responsive (768px - 1024px) */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .cart-variant-table th,
    .cart-variant-table td {
      padding: 10px 12px;
      font-size: 13px;
    }
    
    .cart-variant-table th {
      font-size: 10px;
    }
    
    .cart-product-image {
      width: 70px;
      height: 70px;
    }
    
    .cart-product-title {
      font-size: 15px;
    }
    
    .cart-product-meta small {
      font-size: 11px;
    }
    
    .cart-msrp,
    .cart-current-price {
      font-size: 14px;
    }
    
    ma-quantity-input {
      width: 130px;
      max-width: 130px;
      height: 38px;
    }
    
    .MA-quantity__button {
      width: 38px;
      height: 38px;
      font-size: 19px;
    }
    
    .MA-quantity__input {
      width: 54px;
      font-size: 15px;
      min-height: 38px;
    }
    
    .cart-total-cell {
      min-width: 130px;
    }
    
    .cart-total-amount {
      font-size: 15px;
    }
    
    .cart-next-tier-hint {
      font-size: 9px;
      min-height: 13px;
    }
    
    .remove-variant {
      min-width: 30px;
      min-height: 30px;
      padding: 5px 7px;
    }
    
    .remove-variant svg {
      width: 15px;
      height: 15px;
    }
  }
  
  /* Mobile responsive (max-width: 768px) */
  @media screen and (max-width: 768px) {
    .cart-variant-table {
      display: block;
      overflow-x: auto;
    }
    
    .cart-variant-table thead {
      display: none;
    }
    
    .cart-variant-table tbody,
    .cart-variant-table tr,
    .cart-variant-table td {
      display: block;
      width: 100%;
    }
    
    .cart-variant-table tbody tr {
      margin-bottom: 20px;
      border: 1px solid #e1e1e1;
      border-radius: 8px;
      overflow: hidden;
    }
    
    .cart-variant-table td {
      padding: 12px;
      border-bottom: none;
    }
    
    .cart-product-cell {
      border-bottom: 1px solid #e1e1e1;
    }
    
    .cart-product-info {
      gap: 12px;
    }
    
    .cart-product-image {
      width: 60px;
      height: 60px;
    }
    
    .cart-product-title {
      font-size: 14px;
    }
    
    /* Hide price column on mobile, show in product cell */
    .cart-price-cell {
      padding: 8px 12px;
      text-align: left;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .cart-price-cell::before {
      content: 'Price: ';
      font-weight: 500;
      color: #666;
      font-size: 12px;
    }
    
    .cart-quantity-cell {
      padding: 16px 12px;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .cart-quantity-wrapper {
      flex-direction: row;
      justify-content: space-between;
      gap: 12px;
    }
    
    ma-quantity-input {
      width: 120px;
      max-width: 120px;
      height: 36px;
    }
    
    .MA-quantity__button {
      width: 34px;
      height: 36px;
      font-size: 18px;
    }
    
    .MA-quantity__input {
      width: 52px;
      font-size: 14px;
      padding: 8px 4px;
      min-height: 36px;
    }
    
    .remove-variant {
      padding: 5px 6px;
      min-width: 28px;
      min-height: 28px;
    }
    
    .remove-variant svg {
      width: 14px;
      height: 14px;
    }
    
    .cart-total-cell {
      text-align: center;
      padding: 16px 12px;
      min-width: auto;
    }
    
    .cart-total-amount {
      font-size: 18px;
    }
    
    .cart-next-tier-hint {
      font-size: 9px;
      min-height: 12px;
    }
    
    .cart-discount-row td {
      padding: 12px;
    }
  }
  
  /* Touch device feedback */
  @media (hover: none) and (pointer: coarse) {
    .MA-quantity__button:active:not(:disabled) {
      transform: scale(0.95);
    }
    
    .remove-variant:active:not(:disabled) {
      transform: scale(0.95);
    }
  }
</style>

<div class="cart__template {{ no_ajax_class }} {{ hide_quantity }} {{ section.settings.bg }}"
  data-cart-message-container
  data-section-id="{{ section.id }}"
  data-section-type="cart"
  data-ajax-disable="{{ ajax_disable }}"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  
  <!-- Error message container -->
  <div class="cart__error" data-cart-error></div>
  
  {% comment %} Cart is empty {% endcomment %}
  <div class="cart__empty__page {{ empty_init }}" data-cart-empty>
    {% render 'cart-empty' %}
  </div>
  
  {% comment %} Cart is full {% endcomment %}
  <div class="{{ section.settings.width }} section-padding {{ full_init }}" data-cart-form data-cart-loading>
    <form action="{{ routes.cart_url }}" method="post" novalidate class="cart">
      <h3 class="cart__page__title body-size-8">{{ 'cart.general.title' | t }}</h3>
      <div class="errors" data-form-errors style="display: none;"></div>
      <div class="cart__items__grid cart__heading__wrapper">
        <div class="cart__heading__back">
          <a href="{{ settings.cart_continue_browsing | default: routes.all_products_collection_url }}" class="cart__heading cart__return">
            {% render 'icon-arrow-long-left' %}
            &nbsp;
            {{ 'cart.general.continue_browsing' | t }}
          </a>
        </div>
        <div class="cart__items__quantity">
          <p class="cart__heading">{{ 'cart.label.quantity' | t }}</p>
        </div>
        <div class="cart__items__total">
          <p class="cart__heading">{{ 'cart.label.total' | t }}</p>
        </div>
      </div>
      <div class="template__cart__body">
        <div class="errors" data-form-errors style="display: none;"></div>
        <div data-cart-form>
            {% comment %}
              The following snippet is refreshed via ajax with
              cart.items.liquid when the quantity is adjusted.
            {% endcomment %}
            <div data-line-items>
            {% render 'cart-line-items',  wpddrawer: false %}
            </div>
        </div>

        <div class="template__cart__footer{% if additional_checkout_buttons and settings.cart_show_additional_buttons %} template__cart__footer--additional_buttons{% endif %}" data-cart-bottom>

          <div class="cart__footer__notes">
            {%- if settings.cart_notes_enable -%}
              <label class="cart__notes__label" for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
              <textarea name="note" class="input-full" id="CartSpecialInstructions" data-cart-note>{{ cart.note }}</textarea>
            {%- endif -%}
          </div>
          <div class="cart__footer__shipping">
            {%- if settings.cart_shipping_enable -%}
              {% render 'cart-shipping' %}
            {%- endif -%}
          </div>
          <div class="cart__footer__total">
            {% if settings.cart_custom_message_enable and settings.cart_custom_message_text != blank %}
              <div class="cart__message cart__message--custom">
                {{ settings.cart_custom_message_text }}
              </div>
            {% endif %}

            <div class="cart__page__shipping">
              {% assign free_shipping_text = block.settings.message | default: settings.message %}
{% assign is_enable = false %}
{% assign show_wheel = true %}

{% assign font_size_class = font_size_class | default: '' %}

{% if block.settings.show_wheel == false %}
  {% assign show_wheel = false %}
{% endif %}

{% if block.settings.message != blank %}
  {% assign is_enable = true %}
{% endif %}

{% if settings.show_free_shipping_message and settings.free_shipping_limit != blank and free_shipping_text != blank %}
  {% assign is_enable = true %}
{% endif %}

{% if is_enable %}
  {% assign limit = settings.free_shipping_limit | plus: 0 %}
  {% assign limit_currency = limit | times: 100 %}
  {% assign subtotal_without_currency = cart.total_price | plus: 0 | divided_by: 100 %}

  {% capture left_to_spend %}
    <span data-left-to-spend class="strong">
      {% if settings.currency_code_enable %}
        {{ limit_currency | minus: cart.total_price | money_with_currency }}
      {% else %}
        {{ limit_currency | minus: cart.total_price | money_without_trailing_zeros }}
      {% endif %}
    </span>
  {% endcapture %}

  {% assign free_shipping_message = free_shipping_text | replace: '||amount||', left_to_spend %}
  {% assign qualified_shipping_message = 'cart.general.qualified_shipping_message' | t %}
  {% assign class_message = '' %}

  {% if subtotal_without_currency >= limit %}
    {% if qualified_shipping_message != blank %}
      {% assign class_message = 'is-success' %}
    {% else %}
      {% assign class_message = 'is-hidden' %}
    {% endif %}
  {% elsif subtotal_without_currency == 0 %}
    {% comment %} {% assign class_message = 'is-hidden' %} {% endcomment %}
  {% endif %}

  <p class="cart__message {{ class_message }} {{ font_size_class }}" data-cart-message="{% if qualified_shipping_message != blank %}true{% else %}false{% endif %}" data-limit="{{ limit }}">
    {% if show_wheel %}
      {% assign percent = limit | minus: subtotal_without_currency | times: 100 | divided_by: limit %}
      {% assign percent = 100 | minus: percent %}

      {% if percent > 100 %}
        {% assign percent = 100 %}
      {% endif %}

      <small class="cart__graph">
        {% for i in (1..6) %}
          <small class="cart__graph-dot cart__graph-dot--{{ i }}"></small>
        {% endfor %}
        {%- assign stroke_dashoffset = '87.96459430051421' -%}
        {%- if settings.cart_style == 'compatible' -%}
          {%- assign math_pi = 3.14159265359 -%}
          {%- assign stroke_circumference = 28 | times: math_pi -%}
          {%- assign stroke_calculate = percent | times: stroke_circumference -%}
          {%- assign stroke_calculate = stroke_calculate | divided_by: 100 | divided_by: 2 -%}
          {%- assign stroke_dashoffset = stroke_circumference | minus: stroke_calculate -%}
        {%- endif -%}

        <svg height="18" width="18">
          <circle r="7" cx="9" cy="9" />
          <circle class="cart__graph-progress" stroke-dasharray="87.96459430051421 87.96459430051421" style="stroke-dashoffset: {{ stroke_dashoffset }}" data-cart-progress data-percent="{{ percent }}" r="7" cx="9" cy="9" />
        </svg>
      </small>
    {% endif %}

    {% if qualified_shipping_message != blank %}
      <span class="cart__message-success">{{ qualified_shipping_message }}</span>
    {% endif %}

    <span class="cart__message-default">
      {{ free_shipping_message }}
    </span>
  </p>
{% endif %}

            </div>

            <div class="page__footer__subtotal" data-cart-subtotal>
              {% render 'cart-subtotal' %}
            </div>

            <p>
              <span class="cart__footer__label">{{ 'cart.general.subtotal' | t }}</span>
              <span class="cart__footer__value wcp-original-cart-total" data-cart-final>
                {{ cart.total_price | money_with_currency }}
              </span>
            
            </p>
              <span class="cart__footer__value wcp-cart-total"></span>
                       <div class="additional-notes">
                          <span class="wcp-minimums-note"></span>
                          <span class="wcp-extra-note "></span>
                      </div>
                      {% render "wcp_multi_currency_msg" %}  
            
            <p class="cart__footer__small">{{ 'cart.general.shipping_at_checkout' | t }}</p>
          </div>

          <div class="cart__footer__checkout">

{% assign wcp_wholesale_customer = false %}
{% if shop.metafields.wcp_status.wcp_status != 'disabled' and customer %}
{% assign active_discounts = shop.metafields.wcp_active_discounts.wcp_active_discounts %}
