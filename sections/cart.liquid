<script>
(function() {
  'use strict';
  
  // Prevent legacy theme.js quantity handlers from running on cart page
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function disableLegacyHandlers() {
      const cartQuantityButtons = document.querySelectorAll('[data-cart-loading] [data-increase-quantity], [data-cart-loading] [data-decrease-quantity]');
      cartQuantityButtons.forEach(btn => {
        btn.removeAttribute('data-increase-quantity');
        btn.removeAttribute('data-decrease-quantity');
      });
    });
  }
  
  // Configuration
  const CONFIG = {
    isWholesaleCustomer: {% if wcp_wholesale_customer == true %}true{% else %}false{% endif %},
    wcpDelay: 500,
    debounceDelay: 300,
    maxRetries: 3
  };
  
  // State management
  const state = {
    isUpdating: false,
    updateQueue: [],
    retryCount: 0
  };
  
  // Cart Manager Class
  class CartManager {
    constructor() {
      this.errorContainer = document.querySelector('[data-cart-error]');
      this.cartLoading = document.querySelector('[data-cart-loading]');
      this.cartEmpty = document.querySelector('[data-cart-empty]');
      this.cartForm = document.querySelector('[data-cart-form]');
      this.debounceTimers = new Map();
      this.pendingUpdates = new Map();
    }
    
    // Initialize cart
    init() {
      this.attachEventListeners();
      this.preventDefaultUpdate();
      this.initializePrices();
    }
    
    // Initialize prices on page load
    async initializePrices() {
      try {
        const response = await fetch('/cart.js', {
          headers: {
            'X-Requested-With': 'XMLHttpRequest'
          }
        });
        
        if (response.ok) {
          const cart = await response.json();
          this.updateItemPrices(cart);
        }
      } catch (error) {
        console.error('Error initializing prices:', error);
      }
    }
    
    // Attach all event listeners
    attachEventListeners() {
      document.addEventListener('click', this.handleClick.bind(this));
      document.addEventListener('change', this.handleChange.bind(this));
      document.addEventListener('input', this.handleInput.bind(this));
      document.addEventListener('keydown', this.handleKeydown.bind(this));
      
      // Prevent form submission on Enter key in quantity inputs
      const cartForm = document.querySelector('.cart form');
      if (cartForm) {
        cartForm.addEventListener('submit', this.handleFormSubmit.bind(this));
      }
    }
    
    // Handle form submission
    handleFormSubmit(e) {
      const target = e.submitter;
      
      // Allow checkout button submissions
      if (target && (target.classList.contains('checkout__button') || target.name === 'checkout')) {
        return true;
      }
      
      // Prevent all other form submissions (quantity changes, update button)
      e.preventDefault();
      return false;
    }
    
    // Handle keydown events
    handleKeydown(e) {
      const qtyInput = e.target.closest('.quantity__input');
      
      // Prevent Enter key from submitting form in quantity inputs
      if (qtyInput && e.key === 'Enter') {
        e.preventDefault();
        e.stopPropagation();
        
        // Trigger change event to update cart
        const key = qtyInput.getAttribute('data-update-cart');
        const newQty = parseInt(qtyInput.value) || 0;
        
        if (newQty >= 0) {
          qtyInput.blur(); // Remove focus to trigger change event
          this.updateCartDebounced(key, newQty);
        }
        
        return false;
      }
    }
    
    // Handle all click events
    handleClick(e) {
      const plusBtn = e.target.closest('.quantity__button--plus');
      const minusBtn = e.target.closest('.quantity__button--minus');
      const removeBtn = e.target.closest('[data-remove-key]');
      const checkoutBtn = e.target.closest('.checkout__button');
      
      if (checkoutBtn) {
        return;
      }
      
      if (plusBtn) {
        e.preventDefault();
        e.stopImmediatePropagation();
        this.adjustQuantity(plusBtn, 1);
      } else if (minusBtn) {
        e.preventDefault();
        e.stopImmediatePropagation();
        this.adjustQuantity(minusBtn, -1);
      } else if (removeBtn) {
        e.preventDefault();
        const key = removeBtn.getAttribute('data-remove-key');
        this.removeItem(key);
      }
    }
    
    // Handle change events with debounce
    handleChange(e) {
      const qtyInput = e.target.closest('.quantity__input');
      if (qtyInput) {
        const key = qtyInput.getAttribute('data-update-cart');
        const newQty = parseInt(qtyInput.value) || 0;
        
        qtyInput.classList.add('updating');
        
        if (this.debounceTimers.has(key)) {
          clearTimeout(this.debounceTimers.get(key));
        }
        
        this.pendingUpdates.set(key, newQty);
        
        const timer = setTimeout(() => {
          this.updateCartDebounced(key, newQty);
          this.debounceTimers.delete(key);
          qtyInput.classList.remove('updating');
        }, CONFIG.debounceDelay);
        
        this.debounceTimers.set(key, timer);
      }
    }
    
    // Handle input events
    handleInput(e) {
      const qtyInput = e.target.closest('.quantity__input');
      if (qtyInput) {
        let value = parseInt(qtyInput.value) || 0;
        if (value < 0) value = 0;
        qtyInput.value = value;
      }
    }
    
    // Adjust quantity by delta
    adjustQuantity(button, delta) {
      const wrapper = button.closest('[data-quantity-selector]');
      const input = wrapper.querySelector('.quantity__input');
      const key = input.getAttribute('data-update-cart');
      const currentQty = parseInt(input.value) || 0;
      const newQty = Math.max(0, currentQty + delta);
      
      input.value = newQty;
      input.classList.add('updating');
      
      const plusBtn = wrapper.querySelector('.quantity__button--plus');
      const minusBtn = wrapper.querySelector('.quantity__button--minus');
      plusBtn.disabled = true;
      minusBtn.disabled = true;
      
      this.pendingUpdates.set(key, newQty);
      
      if (this.debounceTimers.has(key)) {
        clearTimeout(this.debounceTimers.get(key));
      }
      
      const timer = setTimeout(() => {
        this.updateCartDebounced(key, newQty);
        this.debounceTimers.delete(key);
        
        plusBtn.disabled = false;
        minusBtn.disabled = false;
        input.classList.remove('updating');
      }, CONFIG.debounceDelay);
      
      this.debounceTimers.set(key, timer);
    }
    
    // Debounced cart update
    async updateCartDebounced(key, quantity) {
      this.pendingUpdates.delete(key);
      await this.updateCart(key, quantity);
    }
    
    // Remove item with animation
    removeItem(key) {
      const row = document.querySelector(`[data-cart-item] input[data-update-cart="${key}"]`)?.closest('[data-cart-item]');
      if (row) {
        row.classList.add('removing');
        setTimeout(() => this.updateCart(key, 0), 300);
      } else {
        this.updateCart(key, 0);
      }
    }
    
    // Update cart via AJAX
    async updateCart(key, quantity) {
      if (state.isUpdating) {
        state.updateQueue.push({ key, quantity });
        return;
      }
      
      state.isUpdating = true;
      this.showLoading();
      this.hideError();
      
      try {
        const response = await fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
          },
          body: JSON.stringify({ id: key, quantity: quantity })
        });
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const cart = await response.json();
        
        // Wait for WCP if needed
        if (CONFIG.isWholesaleCustomer) {
          await this.waitForWCP();
        }
        
        await this.refreshCart(cart);
        state.retryCount = 0;
        
        this.dispatchCartEvent('success', cart);
        document.dispatchEvent(new Event('cartUpdateComplete'));
        
      } catch (error) {
        console.error('Cart update error:', error);
        this.showError('Unable to update cart. Please try again.');
        
        if (state.retryCount < CONFIG.maxRetries) {
          state.retryCount++;
          setTimeout(() => this.updateCart(key, quantity), 1000 * state.retryCount);
        }
        
      } finally {
        state.isUpdating = false;
        this.hideLoading();
        
        if (state.updateQueue.length > 0) {
          const next = state.updateQueue.shift();
          setTimeout(() => this.updateCart(next.key, next.quantity), 100);
        }
      }
    }
    
    // Wait for WCP to load
    waitForWCP() {
      return new Promise((resolve) => {
        if (window.wcp_data) {
          setTimeout(resolve, CONFIG.wcpDelay);
        } else {
          const checkInterval = setInterval(() => {
            if (window.wcp_data) {
              clearInterval(checkInterval);
              setTimeout(resolve, CONFIG.wcpDelay);
            }
          }, 100);
          
          setTimeout(() => {
            clearInterval(checkInterval);
            resolve();
          }, 5000);
        }
      });
    }
    
    // Refresh cart display
    async refreshCart(cart) {
      try {
        const response = await fetch(window.location.href + '?section_id=cart', {
          headers: {
            'X-Requested-With': 'XMLHttpRequest'
          }
        });
        
        const html = await response.text();
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        
        // Update specific sections
        this.updateSection('[data-line-items]', doc);
        this.updateSection('[data-cart-subtotal]', doc);
        this.updateSection('[data-cart-final]', doc);
        this.updateSection('[data-cart-message]', doc);
        
        // Update WCP elements if they exist
        this.updateSection('.wcp-cart-total', doc);
        this.updateSection('.wcp-minimums-note', doc);
        this.updateSection('.wcp-extra-note', doc);
        
        // Update item prices from actual cart data (WCP handles the discounts)
        this.updateItemPrices(cart);
        
        // Update inventory states for items
        this.updateInventoryStates(cart);
        
        // Handle empty cart
        this.toggleEmptyCart(cart.item_count === 0);
        
        // Update header cart
        this.updateHeaderCart(cart);
        
        // Re-trigger WCP if needed
        if (CONFIG.isWholesaleCustomer && window.wcpRefreshCartTotal) {
          window.wcpRefreshCartTotal();
        }
        
      } catch (error) {
        console.error('Cart refresh error:', error);
        window.location.reload();
      }
    }
    
    // Update item prices
    updateItemPrices(cart) {
      // Update WCP discounted prices in the Total column
      if (window.wcp_data && window.wcp_data.wcp_cart && window.wcp_data.wcp_cart.items) {
        const wcpItems = window.wcp_data.wcp_cart.items;
        const currency = window.wcp_data.discounted_hash?.currency || '$';
        const useCurrencyCode = {{ settings.currency_code_enable | default: false }};
        
        // Batch DOM updates for better performance
        const updates = [];
        
        wcpItems.forEach((item, index) => {
          const totalElement = document.querySelector(`[data-item-index="${index}"]`);
          
          if (totalElement && item.wcp_vd_price) {
            // Calculate discounted line total (WCP price is in cents)
            const discountedLineTotal = (item.wcp_vd_price * item.quantity) / 100;
            
            // Format price based on currency settings
            let formattedPrice;
            if (useCurrencyCode) {
              formattedPrice = currency + discountedLineTotal.toFixed(2) + ' ' + (window.Shopify?.currency?.active || 'USD');
            } else {
              // Remove trailing zeros
              formattedPrice = currency + discountedLineTotal.toFixed(2).replace(/\.?0+$/, '');
            }
            
            updates.push({
              element: totalElement,
              text: formattedPrice
            });
          }
        });
        
        // Apply all updates at once (minimize reflows)
        requestAnimationFrame(() => {
          updates.forEach(({ element, text }) => {
            element.textContent = text;
          });
        });
      }
      
      console.log('Cart updated:', cart.item_count, 'items');
    }

    showLoading() {
      this.cartLoading?.classList.add('cart--loading');
    }
    
    hideLoading() {
      this.cartLoading?.classList.remove('cart--loading');
    }
    
    showError(message) {
      if (this.errorContainer) {
        this.errorContainer.textContent = message;
        this.errorContainer.classList.add('active');
        setTimeout(() => this.hideError(), 5000);
      }
    }
    
    hideError() {
      this.errorContainer?.classList.remove('active');
    }
    
    preventDefaultUpdate() {
      const updateButton = document.querySelector('[name="update"]');
      if (updateButton) {
        updateButton.addEventListener('click', (e) => {
          e.preventDefault();
          return false;
        });
      }
      
      const checkoutButtons = document.querySelectorAll('.checkout__button');
      checkoutButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          if (!button.disabled) {
            return true;
          }
        });
      });
    }
    
    dispatchCartEvent(type, cart) {
      document.dispatchEvent(new CustomEvent('theme:cart:change', {
        detail: { type, cart },
        bubbles: true
      }));
    }

    // Update inventory states for all items
    updateInventoryStates(cart) {
      cart.items.forEach(item => {
        const input = document.querySelector(`input[data-update-cart="${item.key}"]`);
        if (!input) return;
        
        const inventoryQty = parseInt(input.getAttribute('data-inventory-quantity'));
        const inventoryManagement = input.getAttribute('data-inventory-management');
        const inventoryPolicy = input.getAttribute('data-inventory-policy');
        
        // Only enforce inventory limits if managed by Shopify and policy is 'deny'
        if (inventoryManagement === 'shopify' && inventoryPolicy === 'deny') {
          const wrapper = input.closest('[data-quantity-selector]');
          const plusBtn = wrapper?.querySelector('.quantity__button--plus');
          const minusBtn = wrapper?.querySelector('.quantity__button--minus');
          
          if (plusBtn) {
            if (item.quantity >= inventoryQty) {
              plusBtn.disabled = true;
              plusBtn.setAttribute('title', 'Maximum available quantity reached');
              plusBtn.style.opacity = '0.4';
              plusBtn.style.cursor = 'not-allowed';
            } else {
              plusBtn.disabled = false;
              plusBtn.removeAttribute('title');
              plusBtn.style.opacity = '';
              plusBtn.style.cursor = '';
            }
          }
          
          // Always enable minus button if quantity > 0
          if (minusBtn) {
            minusBtn.disabled = item.quantity <= 0;
          }
        }
      });
    }
  }
  
  // Initialize
  let cartManager;
  
  function initCartPage() {
    if (!cartManager) {
      cartManager = new CartManager();
    }
    cartManager.init();
  }
  
  window.initCartPage = initCartPage;
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCartPage);
  } else {
    initCartPage();
  }
  
  document.addEventListener('theme:cart:open', () => {
    setTimeout(initCartPage, 100);
  });
  
})();
</script>
            
