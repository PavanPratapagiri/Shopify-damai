<!-- /snippets/cart-line-items.liquid -->

{%- assign cart_products = '' -%}

<div class="cart__items">
  {% for line_item in cart.items %}
    <div class="cart__items__row" data-cart-item>
      <div class="item--loadbar" data-item-loadbar style="display: none;">&nbsp;</div>
      <div class="cart__items__grid" data-item>
        <div class="cart__items__remove">
          <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0"
            data-remove-key="{{ line_item.key }}"
            tabindex="0">
            <span class="cart__remove__icon">
              {%- render 'icon-bin' -%}
            </span>
            <span class="cart__remove badge">
              {{ 'cart.general.remove' | t }}
            </span>
          </a>
        </div>

        <div class="cart__items__image{% unless line_item.image %} product-no-image{% endunless %}">
          <a href="{{ line_item.url }}">
            {% if line_item.image %}
              <img class="cart__items__img" src="{{ line_item | img_url: '180x' }}" alt="{{ line_item.title | strip_html | escape }}">
            {% endif %}
          </a>
        </div>

        <div class="cart__items__title">
          <p>
            <a href="{{ line_item.url }}">
              {{ line_item.product.title }}
            </a>
          </p>
          <div class="cart__items__meta">
            {% comment %} Vendor if enabled {% endcomment %}
            {% if settings.cart_vendor_enable %}
              <p class="body-size-3">{{ line_item.vendor }}</p>
            {% endif %}

            {% comment %} Variant as name/name/name {% endcomment %}
            {% unless line_item.product.has_only_default_variant %}
              <p class="body-size-3">{{ line_item.variant.title }}</p>
            {% endunless %}

            {% comment %} Subscription plan name {% endcomment %}
            {% if line_item.selling_plan_allocation %}
              <p class="body-size-3">{{ line_item.selling_plan_allocation.selling_plan.name }}</p>
            {%- endif -%}

            {% comment %} Line item properties, including files {% endcomment %}
            {% assign property_size = line_item.properties | size %}
            {%- if property_size > 0 -%}
              {%- for p in line_item.properties -%}
                {%- assign property_first_char = p.first | slice: 0 -%}
                {%- if p.last != blank and property_first_char != '_' -%}
                  <p class="body-size-3">
                    <span>{{ p.first }}: </span>
                    <span>
                      {%- if p.last contains '/uploads/' -%}
                        <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                      {%- else -%}
                        {{ p.last }}
                      {%- endif -%}
                    </span>
                  </p>
                {%- endif -%}
              {%- endfor -%}
            {%- endif -%}
          </div>
        </div>

        {% if template != 'cart' %}
        <input type="hidden" data-wpd-cart-drawer-product-handle="{{ line_item.product.handle }}"                                  
data-wpd-cart-drawer-variant-id="{{ line_item.variant.id }}"                                   
data-wpd-cart-drawer-variant-price="{{ line_item.variant.price }}"                                  
data-wpd-cart-drawer-variant-compare-at-price="{{ line_item.variant.compare_at_price }}"                                  
data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = line_item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
data-wpd-cart-drawer-product-id="{{ line_item.product.id }}"                                  
data-wpd-cart-drawer-line-price                                  
data-wpd-cart-drawer-item="{{ line_item.key }}"                          
data-wpd-cart-drawer-quantity="{{ line_item.quantity }}" /> {% endif %}
        <div class="cart__items__price">
          <p class="line__price {{ template }}" data-cart-item-price="{{ line_item.key }}">
            {%- assign discounted = false -%}
            {%- if line_item.original_price > line_item.final_price -%}
              {%- assign discounted = true -%}
            {%- endif -%}

            {%- assign sale = false -%}
            {%- assign sale_plan_allocation = false -%}

            {%- if line_item.selling_plan_allocation != blank -%}
              {%- assign sale_plan_allocation = true -%}
            {%- endif -%}

            {%- if sale_plan_allocation -%}
              {%- if line_item.selling_plan_allocation.compare_at_price > line_item.selling_plan_allocation.price -%}
                {%- assign sale = true -%}
              {%- endif -%}
            {%- else -%}
              {%- if line_item.variant.compare_at_price > line_item.final_price -%}
                {%- assign sale = true -%}
              {%- endif -%}
            {%- endif -%}

            {%- comment -%} Show compare at price (MSRP) if on sale {%- endcomment -%}
            {%- if sale -%}
              <del data-compare-price="{{ line_item.key }}" style="display: block; opacity: 0.6;">
                {%- if sale_plan_allocation -%}
                  {% if settings.currency_code_enable %}
                    {{ line_item.selling_plan_allocation.compare_at_price | money_with_currency }}
                  {% else %}
                    {{ line_item.selling_plan_allocation.compare_at_price | money }}
                  {% endif %}
                {%- else -%}
                  {% if settings.currency_code_enable %}
                    {{ line_item.variant.compare_at_price | money_with_currency }}
                  {% else %}
                    {{ line_item.variant.compare_at_price | money }}
                  {% endif %}
                {% endif %}
              </del>
            {%- endif -%}

            {%- comment -%} Show current per-unit price {%- endcomment -%}
            {%- if sale or discounted -%}
              <mark   
              {% if template != 'cart' %}
               data-wpd-cart-drawer-product-handle="{{ line_item.product.handle }}"                                  
              data-wpd-cart-drawer-variant-id="{{ line_item.variant.id }}"                                   
              data-wpd-cart-drawer-variant-price="{{ line_item.final_price }}"                                  
              data-wpd-cart-drawer-variant-compare-at-price="{{ line_item.variant.compare_at_price }}"                                  
              data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = line_item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
              data-wpd-cart-drawer-product-id="{{ line_item.product.id }}"                                  
              data-wpd-cart-drawer-item="{{ line_item.key }}"                          
              data-wpd-cart-drawer-quantity="{{ line_item.quantity }}" {% endif %} 
                data-wpd-cart-variant-id="{{ line_item.variant.id }}"   
                data-wpd-cart-item="{{ line_item.key }}"
                data-item-price="{{ line_item.key }}"
                style="display: inline-block; background: none; font-weight: normal; color: #c33;">
                {% if settings.currency_code_enable %}
                  {{ line_item.final_price | money_with_currency }}
                {% else %}
                  {{ line_item.final_price | money }}
                {% endif %}
              </mark>
            {%- else -%}
              <span {% if template != 'cart' %}
              data-wpd-cart-drawer-product-handle="{{ line_item.product.handle }}"                                  
              data-wpd-cart-drawer-variant-id="{{ line_item.variant.id }}"                                   
              data-wpd-cart-drawer-variant-price="{{ line_item.final_price }}"                                  
              data-wpd-cart-drawer-variant-compare-at-price="{{ line_item.variant.compare_at_price }}"                                  
              data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = line_item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
              data-wpd-cart-drawer-product-id="{{ line_item.product.id }}"                                  
              data-wpd-cart-drawer-item="{{ line_item.key }}"                          
              data-wpd-cart-drawer-quantity="{{ line_item.quantity }}" {% endif %} 
              data-wpd-cart-variant-id="{{ line_item.variant.id }}"   
              data-wpd-cart-item="{{ line_item.key }}"
              data-item-price="{{ line_item.key }}"
              style="display: inline-block;">
                {% if settings.currency_code_enable %}
                  {{ line_item.final_price | money_with_currency }}
                {% else %}
                  {{ line_item.final_price | money }}
                {% endif %}
              </span>
            {%- endif -%}
          </p>
          
          {%- comment -%} Volume discount price (calculated by JavaScript) {%- endcomment -%}
          <p class="line__price line__price--discounted" data-volume-discounted-price="{{ line_item.key }}" style="display: none; margin-top: 4px;">
            <span style="font-size: 12px; color: #28a745; font-weight: 600;">
              {%- comment -%} Will be populated by JavaScript with volume discount price {%- endcomment -%}
            </span>
          </p>
          
          {%- comment -%} ...existing unit price code... {%- endcomment -%}
          {% if line_item.unit_price %}
            {% capture unit_price_separator %}
              <span aria-hidden="true">/</span><span class="visually-hidden">{{ 'general.accessibility.unit_price_separator' | t }}&nbsp;</span>
            {% endcapture %}
            {% capture unit_price_base_unit %}
              {% if line_item.unit_price_measurement.reference_value != 1 %}
                {{ line_item.unit_price_measurement.reference_value }}
              {% endif %}
              {{ line_item.unit_price_measurement.reference_unit }}
            {% endcapture %}
            <p class="line__price">
              <span class="visually-hidden">{{ 'products.product.unit_price_label' | t }}</span>
              <span>
                {% if settings.currency_code_enable %}
                  {{ line_item.unit_price | money_with_currency }}
                {% else %}
                  {{ line_item.unit_price | money }}
                {% endif %}
                {{ unit_price_separator }}{{ unit_price_base_unit }}</span>
            </p>
          {% endif %}
        </div>

        <div class="cart__items__quantity">
          <div class="quantity__wrapper" data-quantity-selector>
            <button class="quantity__button quantity__button--minus" data-decrease-quantity type="button">&minus;</button>
            <label for="updates_{{ line_item.key }}" class="visually-hidden">{{ 'cart.label.quantity' | t }}</label>
            <input data-quantity-input
              data-update-cart="{{ line_item.key }}"
              class="quantity__input"
              type="number"
              min="0"
              id="updates_{{ line_item.key }}"
              name="updates[]"
              value="{{ line_item.quantity }}"/>
            <button class="quantity__button quantity__button--plus" data-increase-quantity type="button">+</button>
          </div>
        </div>

        <div class="cart__items__total" 
            data-wpd-cart-variant-id="{{ line_item.variant.id }}"   
            data-wpd-cart-item="{{ line_item.key }}"                                
            data-wpd-cart-line-price
            data-line-total="{{ line_item.key }}"
            style="display: block;">
          {%- comment -%} Show original MSRP total if item has compare_at_price {%- endcomment -%}
          {%- if sale -%}
            <del data-compare-line-total="{{ line_item.key }}" style="display: block; opacity: 0.6; font-size: 0.9em; margin-bottom: 4px;">
              {%- assign msrp_line_total = line_item.variant.compare_at_price | times: line_item.quantity -%}
              {% if settings.currency_code_enable %}
                {{ msrp_line_total | money_with_currency }}
              {% else %}
                {{ msrp_line_total | money }}
              {% endif %}
            </del>
          {%- endif -%}
          
          {%- comment -%} Show updated discounted total {%- endcomment -%}
          <span data-line-total-price="{{ line_item.key }}" style="display: block; font-weight: 600;{% if sale %} color: #28a745;{% endif %}">
            {% if settings.currency_code_enable %}
              {{ line_item.final_line_price | money_with_currency }}
            {% else %}
              {{ line_item.final_line_price | money }}
            {% endif %}
          </span>
        </div>

        {% if discounted and line_item.quantity >= 1 %}
          {%- for discount in line_item.line_level_discount_allocations -%}
            <div class="cart__items__savings">
              <span class="item__total__savings">
                <span class="cart__icon--tags">
                  {% render 'icon-tags' %}
                </span>
                {{ 'cart.general.savings' | t }}
                {% if settings.currency_code_enable %}
                  {{ discount.amount | money_with_currency }}
                {% else %}
                  {{ discount.amount | money_without_trailing_zeros }}
                {% endif %}
                {{ 'cart.general.with' | t }}
                {{ discount.discount_application.title }}
              </span>
            </div>
          {%- endfor -%}
        {% endif %}
      </div>
    </div>
    {%- assign cart_products = cart_products | append: line_item.product.id | append: ',' -%}
  {% endfor %}
</div>

{%- liquid
  assign best_upsell = nil
  assign for_free_shipping = settings.free_shipping_limit | times: 100 | minus: cart.total_price | at_least: 0

  for cart_item in cart.items

    # Cart upsell will be the first line item upsell available, best single upsell beats best upsell_list
    assign upsell_list = cart_item.product.metafields.theme.upsell_list.value
    assign upsell_product = cart_item.product.metafields.theme.upsell.value

    if upsell_product and upsell_product.available
      unless cart_products contains upsell_product.id
        if best_upsell == nil
          assign best_upsell = upsell_product
        elsif upsell_product.price >= for_free_shipping and upsell_product.price < best_upsell.price
          assign best_upsell = upsell_product
        endif
      endunless
    endif

    for upsell_product in upsell_list
      if upsell_product and upsell_product.available
        unless cart_products contains upsell_product.id
          if best_upsell == nil
            assign best_upsell = upsell_product
          elsif upsell_product.price >= for_free_shipping and upsell_product.price < best_upsell.price
            assign best_upsell = upsell_product
          endif
        endunless
      endif
    endfor
  endfor
-%}

{%- if best_upsell -%}
  <div class="upsell__holder" data-cart-page-upsell-wrapper>
    <div class="upsell__holder__title">
      <h2 class="upsell__holder__title__text">
        {{ 'products.general.buy_with' | t }}
      </h2>
    </div>
    {%- render 'product-clip' card_product: best_upsell -%}
  </div>
{%- endif -%}