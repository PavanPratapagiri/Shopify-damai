<!-- /snippets/cart-line-items.liquid -->

{%- assign cart_products = '' -%}

<div class="cart__items">
  <table class="cart-variant-table">
    <thead>
      <tr>
        <th class="product-heading">Product</th>
        <th class="quantity-heading">Quantity</th>
        <th class="stock-heading">Availability</th>
        <th class="price-heading">Price</th>
        <th class="total-heading">Total</th>
      </tr>
    </thead>
    <tbody>
      {% for line_item in cart.items %}
        <tr class="cart__items__row" 
            data-cart-item
            data-variant-id="{{ line_item.variant.id }}"
            data-line-key="{{ line_item.key }}"
            data-quantity="{{ line_item.quantity }}">
          
          <input type="hidden" 
            data-wpd-cart-drawer-product-handle="{{ line_item.product.handle }}"                                  
            data-wpd-cart-drawer-variant-id="{{ line_item.variant.id }}"                                   
            data-wpd-cart-drawer-variant-price="{{ line_item.variant.price }}"                                  
            data-wpd-cart-drawer-variant-compare-at-price="{{ line_item.variant.compare_at_price }}"                                  
            data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = line_item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
            data-wpd-cart-drawer-product-id="{{ line_item.product.id }}"                                  
            data-wpd-cart-drawer-line-price                                  
            data-wpd-cart-drawer-item="{{ line_item.key }}"                          
            data-wpd-cart-drawer-quantity="{{ line_item.quantity }}" />
          
          {%- comment -%} Product Column: Image + Title + Variant {%- endcomment -%}
          <td class="cart-product-cell">
            <div class="cart-product-info">
              <div class="cart-product-image{% unless line_item.image %} product-no-image{% endunless %}">
                <a href="{{ line_item.url }}">
                  {% if line_item.image %}
                    <img src="{{ line_item | img_url: '120x' }}" alt="{{ line_item.title | strip_html | escape }}">
                  {% endif %}
                </a>
              </div>
              
              <div class="cart-product-details">
                <a href="{{ line_item.url }}" class="cart-product-title">
                  {{ line_item.product.title }}
                </a>
                
                <div class="cart-product-meta">
                  {% if settings.cart_vendor_enable %}
                    <small>{{ line_item.vendor }}</small>
                  {% endif %}
                  
                  {% unless line_item.product.has_only_default_variant %}
                    <small>{{ line_item.variant.title }}</small>
                  {% endunless %}
                  
                  {% if line_item.variant.sku != blank %}
                    <small class="cart-sku">SKU: {{ line_item.variant.sku }}</small>
                  {% endif %}
                  
                  {% if line_item.selling_plan_allocation %}
                    <small>{{ line_item.selling_plan_allocation.selling_plan.name }}</small>
                  {%- endif -%}
                  
                  {%- assign property_size = line_item.properties | size -%}
                  {%- if property_size > 0 -%}
                    {%- for p in line_item.properties -%}
                      {%- assign property_first_char = p.first | slice: 0 -%}
                      {%- if p.last != blank and property_first_char != '_' -%}
                        <small>
                          {{ p.first }}: 
                          {%- if p.last contains '/uploads/' -%}
                            <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                          {%- else -%}
                            {{ p.last }}
                          {%- endif -%}
                        </small>
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}
                </div>
                
                {%- comment -%} Mobile price display {%- endcomment -%}
                <div class="cart-mobile-price">
                  {%- assign sale = false -%}
                  {%- if line_item.variant.compare_at_price > line_item.final_price -%}
                    {%- assign sale = true -%}
                    <del style="opacity: 0.6; margin-right: 8px;">
                      {{ line_item.variant.compare_at_price | money }}
                    </del>
                  {%- endif -%}
                  <span data-item-price="{{ line_item.key }}">
                    {{ line_item.final_price | money }}
                  </span>
                </div>
              </div>
            </div>
          </td>
          
          {%- comment -%} Quantity Column {%- endcomment -%}
          <td class="cart-quantity-cell">
            <div class="cart-quantity-wrapper">
              <ma-quantity-input>
                <button type="button" name="minus" class="MA-quantity__button quantity__button--minus">âˆ’</button>
                <input type="number"
                  min="0"
                  step="1"
                  value="{{ line_item.quantity }}"
                  class="MA-quantity__input quantity__input"
                  data-quantity-input
                  data-update-cart="{{ line_item.key }}"
                  id="updates_{{ line_item.key }}"
                  name="updates[]" />
                <button type="button" name="plus" class="MA-quantity__button quantity__button--plus">+</button>
              </ma-quantity-input>
              
              <button class="remove-variant" data-remove-key="{{ line_item.key }}" title="Remove item">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false" class="icon icon-remove">
                  <path d="M14 3h-3.53a3.07 3.07 0 00-.6-1.65C9.44.82 8.8.5 8 .5s-1.44.32-1.87.85A3.06 3.06 0 005.53 3H2a.5.5 0 000 1h1.25v10c0 .28.22.5.5.5h8.5a.5.5 0 00.5-.5V4H14a.5.5 0 000-1zM6.91 1.98c.23-.29.58-.48 1.09-.48s.85.19 1.09.48c.2.24.3.6.36 1.02h-2.9c.05-.42.17-.78.36-1.02zm4.84 11.52h-7.5V4h7.5v9.5z" fill="currentColor"></path>
                  <path d="M6.55 5.25a.5.5 0 00-.5.5v6a.5.5 0 001 0v-6a.5.5 0 00-.5-.5zM9.45 5.25a.5.5 0 00-.5.5v6a.5.5 0 001 0v-6a.5.5 0 00-.5-.5z" fill="currentColor"></path>
                </svg>
              </button>
            </div>
            
            {%- comment -%} Mobile stock info {%- endcomment -%}
            <div class="cart-stock-mobile">
              {% if line_item.variant.inventory_management %}
                {% if line_item.variant.inventory_quantity > 0 %}
                  In stock: {{ line_item.variant.inventory_quantity }}
                {% else %}
                  Limited stock
                {% endif %}
              {% endif %}
            </div>
          </td>
          
          {%- comment -%} Stock/Availability Column {%- endcomment -%}
          <td class="cart-stock-cell">
            {% if line_item.variant.inventory_management %}
              {% if line_item.variant.inventory_quantity > 0 %}
                {{ line_item.variant.inventory_quantity }} in stock
              {% elsif line_item.variant.inventory_quantity <= 0 %}
                <span style="color: #999;">Limited stock</span>
              {% endif %}
            {% else %}
              In stock
            {% endif %}
          </td>
          
          {%- comment -%} Price Column {%- endcomment -%}
          <td class="cart-price-cell">
            {%- assign discounted = false -%}
            {%- if line_item.original_price > line_item.final_price -%}
              {%- assign discounted = true -%}
            {%- endif -%}

            {%- assign sale = false -%}
            {%- if line_item.variant.compare_at_price > line_item.final_price -%}
              {%- assign sale = true -%}
            {%- endif -%}

            {%- if sale -%}
              <div class="cart-msrp" data-compare-price="{{ line_item.key }}">
                MSRP: {{ line_item.variant.compare_at_price | money }}
              </div>
            {%- endif -%}

            <div class="cart-current-price">
              <span data-wpd-cart-drawer-product-handle="{{ line_item.product.handle }}"                                  
                data-wpd-cart-drawer-variant-id="{{ line_item.variant.id }}"                                   
                data-wpd-cart-drawer-variant-price="{{ line_item.final_price }}"                                  
                data-wpd-cart-drawer-variant-compare-at-price="{{ line_item.variant.compare_at_price }}"                                  
                data-wpd-cart-drawer-product-collection-ids="{% assign wpdProductCollectionIds = line_item.product.collections | map:'id' %}{{ wpdProductCollectionIds | join:',' }}"                                  
                data-wpd-cart-drawer-product-id="{{ line_item.product.id }}"                                  
                data-wpd-cart-drawer-item="{{ line_item.key }}"                          
                data-wpd-cart-drawer-quantity="{{ line_item.quantity }}"
                data-wpd-cart-variant-id="{{ line_item.variant.id }}"   
                data-wpd-cart-item="{{ line_item.key }}"
                data-item-price="{{ line_item.key }}">
                {{ line_item.final_price | money }}
              </span>
            </div>
            
            <div class="cart-volume-discount" data-volume-discounted-price="{{ line_item.key }}" style="display: none;">
            </div>
          </td>
          
          {%- comment -%} Total Column {%- endcomment -%}
          <td class="cart-total-cell"
              data-wpd-cart-variant-id="{{ line_item.variant.id }}"   
              data-wpd-cart-item="{{ line_item.key }}"                                
              data-wpd-cart-line-price
              data-line-total="{{ line_item.key }}">
            
            {%- if sale -%}
              <del class="cart-compare-total" data-compare-line-total="{{ line_item.key }}">
                {%- assign msrp_line_total = line_item.variant.compare_at_price | times: line_item.quantity -%}
                {{ msrp_line_total | money }}
              </del>
            {%- endif -%}
            
            <div class="cart-line-total">
              <span data-line-total-price="{{ line_item.key }}">
                {{ line_item.final_line_price | money }}
              </span>
            </div>
            
            <div class="cart-tier-hint" data-volume-hint="{{ line_item.key }}">
            </div>
          </td>
        </tr>
        
        {%- if discounted and line_item.quantity >= 1 -%}
          <tr class="cart-discount-row">
            <td colspan="5">
              {%- for discount in line_item.line_level_discount_allocations -%}
                <div class="cart__items__savings">
                  <span class="item__total__savings">
                    <span class="cart__icon--tags">{% render 'icon-tags' %}</span>
                    {{ 'cart.general.savings' | t }}
                    {{ discount.amount | money }}
                    {{ 'cart.general.with' | t }}
                    {{ discount.discount_application.title }}
                  </span>
                </div>
              {%- endfor -%}
            </td>
          </tr>
        {%- endif -%}
        
        {%- assign cart_products = cart_products | append: line_item.product.id | append: ',' -%}
      {% endfor %}
    </tbody>
  </table>
</div>

{%- liquid
  assign best_upsell = nil
  assign for_free_shipping = settings.free_shipping_limit | times: 100 | minus: cart.total_price | at_least: 0

  for cart_item in cart.items

    # Cart upsell will be the first line item upsell available, best single upsell beats best upsell_list
    assign upsell_list = cart_item.product.metafields.theme.upsell_list.value
    assign upsell_product = cart_item.product.metafields.theme.upsell.value

    if upsell_product and upsell_product.available
      unless cart_products contains upsell_product.id
        if best_upsell == nil
          assign best_upsell = upsell_product
        elsif upsell_product.price >= for_free_shipping and upsell_product.price < best_upsell.price
          assign best_upsell = upsell_product
        endif
      endunless
    endif

    for upsell_product in upsell_list
      if upsell_product and upsell_product.available
        unless cart_products contains upsell_product.id
          if best_upsell == nil
            assign best_upsell = upsell_product
          elsif upsell_product.price >= for_free_shipping and upsell_product.price < best_upsell.price
            assign best_upsell = upsell_product
          endif
        endunless
      endif
    endfor
  endfor
-%}

{%- if best_upsell -%}
  <div class="upsell__holder" data-cart-page-upsell-wrapper>
    <div class="upsell__holder__title">
      <h2 class="upsell__holder__title__text">
        {{ 'products.general.buy_with' | t }}
      </h2>
    </div>
    {%- render 'product-clip' card_product: best_upsell -%}
  </div>
{%- endif -%}